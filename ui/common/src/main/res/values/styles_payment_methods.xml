<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="PaymentMethods" />

  <style name="PaymentMethods.DialogCardStyle">
    <item name="android:layout_width">@dimen/payment_methods_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:animateLayoutChanges">true</item>
    <item name="android:background">@drawable/background_card_grey</item>
  </style>

  <style name="PaymentMethods.DialogCardStyle.Landscape">
    <item name="android:layout_width">@dimen/payment_methods_width_landscape</item>
    <item name="android:maxHeight">300dp</item>
  </style>

  <style name="PaymentMethods.Carrier" />

  <style name="PaymentMethods.Carrier.TextStyle">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/styleguide_light_grey</item>
  </style>

  <style name="PaymentMethods.CarrierBilling.Title" parent="PaymentMethods.Carrier.TextStyle">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/styleguide_light_grey</item>
  </style>

  <style name="PaymentMethods.CarrierBilling.FiatValueText" parent="PaymentMethods.Carrier.TextStyle">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/styleguide_light_grey</item>
  </style>

  <style name="PaymentMethods.CarrierBilling.AppcValueText" parent="PaymentMethods.Carrier.TextStyle">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/styleguide_dark_grey</item>
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="PaymentMethods.CarrierBilling.Description" parent="PaymentMethods.Carrier.TextStyle">
    <item name="android:textColor">@color/styleguide_dark_grey</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="PaymentMethods.Carrier.PhoneFieldError">
    <item name="android:textColor">@color/styleguide_light_grey</item>
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="PaymentMethods.Carrier.PhoneNumberLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    <item name="android:background">@null</item>
    <item name="android:textColorHint">@color/styleguide_dark_grey</item>
    <item name="hintTextColor">@color/styleguide_dark_grey</item>
    <item name="android:textColor">@color/styleguide_light_grey</item>
    <item name="android:textCursorDrawable">@null</item>
    <item name="boxStrokeColor">@null</item>
    <item name="boxBackgroundMode">none</item>
    <item name="hintEnabled">false</item>
    <item name="colorControlActivated">@color/styleguide_light_grey</item>
    <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
    <item name="colorControlNormal">@color/styleguide_light_grey</item>
    <item name="colorControlHighlight">@color/styleguide_light_grey</item>
    <item name="android:theme">@style/EditTextCursorTheme</item>
    <item name="android:textColorPrimary">@color/styleguide_light_grey</item>
  </style>

  <style name="PaymentMethods.Carrier.PhoneNumberEditText">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/styleguide_light_grey</item>
    <item name="android:singleLine">true</item>
    <item name="hintTextColor">@color/styleguide_dark_grey</item>
    <item name="android:maxLines">1</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:imeOptions">flagNoExtractUi|flagNoFullscreen</item>
    <item name="android:inputType">phone</item>
    <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    <item name="colorControlActivated">@color/styleguide_light_grey</item>
    <item name="colorControlNormal">@color/styleguide_light_grey</item>
    <item name="colorControlHighlight">@color/styleguide_light_grey</item>
    <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
    <item name="editTextStyle">@style/editTextStyle</item>
  </style>

  <style name="PaymentMethods.Error" />

  <style name="PaymentMethods.Error.OtherPaymentsButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
    <item name="android:textColor">@color/styleguide_pink</item>
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:lineSpacingExtra">4sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:letterSpacing">0.03</item>
  </style>

  <style name="PaymentMethods.Error.Title">
    <item name="android:textColor">@color/styleguide_red</item>
    <item name="android:textSize">20sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:lineSpacingExtra">4sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:letterSpacing">0.03</item>
  </style>

  <style name="PaymentMethods.Error.Message" parent="@style/TextAppearance.AppCompat.Body1.Roboto.Regular">
    <item name="android:textColor">@color/styleguide_dark_grey</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="PaymentMethods.Error.Disclaimer" parent="@style/TextAppearance.AppCompat.Body1.Roboto.Regular">
    <item name="android:textColor">@color/styleguide_black_transparent_80</item>
    <item name="android:textSize">12sp</item>
  </style>

</resources>