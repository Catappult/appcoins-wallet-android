<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="SeparatorView">
    <attr name="line_type" format="enum">
      <enum name="solid" value="0" />
      <enum name="dashed" value="1" />
    </attr>
    <attr name="line_orientation" format="enum">
      <enum name="horizontal" value="0" />
      <enum name="vertical" value="1" />
    </attr>
  </declare-styleable>

  <declare-styleable name="WalletButtonView">
    <attr name="buttonType" format="enum">
      <enum name="filled" value="0" />
      <enum name="outlined" value="1" />
      <enum name="text" value="2" />
      <enum name="disabled" value="3" />
      <enum name="filled_gray_pink" value="4" />
      <enum name="outlined_grey" value="5" />
    </attr>
    <attr name="buttonText" format="string" />
    <attr name="buttonColor" format="color" />
    <attr name="buttonIsAllCaps" format="boolean" />
    <attr name="buttonImageRight" format="reference" />
    <attr name="buttonImageLeft" format="reference" />
  </declare-styleable>

  <declare-styleable name="WalletTextFieldView">
    <attr name="textFieldType" format="enum">
      <enum name="filled" value="0" />
      <enum name="outlined" value="1" />
      <enum name="password" value="2" />
      <enum name="read_only" value="3" />
      <enum name="number" value="4" />
    </attr>
    <attr name="textFieldHint" format="string" />
    <attr name="textFieldColor" format="color" />
  </declare-styleable>

  <declare-styleable name="AnimatedTextSwitcher">
    <attr name="toolbarText" format="string" />
  </declare-styleable>

  <style name="ToolbarTextSwitcher" />

  <style name="ToolbarTextSwitcher.Title">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/styleguide_white</item>
  </style>

</resources>