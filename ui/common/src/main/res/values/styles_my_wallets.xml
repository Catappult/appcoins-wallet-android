<?xml version="1.0" encoding="utf-8"?>
<resources>


  <style name="MyWallets" />

  <style name="MyWallets.Title">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/styleguide_white</item>
  </style>

  <style name="MyWallets.Title.Dark">
    <item name="android:textColor">@color/styleguide_black_transparent_80</item>
  </style>

  <style name="MyWallets.Subtitle">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/styleguide_medium_grey</item>
  </style>

  <style name="MyWallets.TotalBalance">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/styleguide_white</item>
  </style>

  <style name="MyWallets.TotalBalance.Dark">
    <item name="android:textColor">#000D17</item>
  </style>

  <style name="MyWallets.TotalAppc">
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">@color/styleguide_medium_grey</item>
  </style>

  <style name="MyWallets.TotalAppc.Dark">
    <item name="android:textColor">#000D17</item>
  </style>

  <style name="MyWallets.HeaderShape" />

  <style name="MyWallets.Shapes" />

  <style name="MyWallets.Shapes.Pill">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
  </style>

  <style name="MyWallets.Shapes.Rounded8">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
  </style>

  <style name="MyWallets.TokenInfo" />

  <style name="MyWallets.TokenInfo.Title">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/styleguide_light_grey</item>
  </style>

  <style name="MyWallets.TokenInfo.Description">
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/styleguide_black_transparent_80</item>
  </style>


  <style name="NoBackgroundDialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>

</resources>