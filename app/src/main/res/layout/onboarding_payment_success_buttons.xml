<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/big_margin"
    >

  <com.asfoundation.wallet.ui.common.WalletButtonView
      android:id="@+id/back_to_game_button"
      android:layout_width="0dp"
      android:layout_height="@dimen/large_button_height"
      android:layout_marginHorizontal="@dimen/half_large_margin"
      app:buttonText="@string/back_to_the_game_button"
      app:buttonType="filled"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/explore_wallet_button"
      />

  <com.asfoundation.wallet.ui.common.WalletButtonView
      android:id="@+id/explore_wallet_button"
      android:layout_width="0dp"
      android:layout_height="@dimen/large_button_height"
      android:layout_marginTop="@dimen/normal_margin"
      android:layout_marginHorizontal="@dimen/half_large_margin"
      app:buttonText="@string/onboarding_1st_explore_wallet_button"
      app:buttonType="text"
      app:layout_constraintTop_toBottomOf="@id/back_to_game_button"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
