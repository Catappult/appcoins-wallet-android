<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/styleguide_blue"
    >

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/onboarding_value1_icon"
      android:layout_width="@dimen/onboarding_value_proposition_image_size"
      android:layout_height="@dimen/onboarding_value_proposition_image_size"
      android:layout_marginBottom="@dimen/normal_margin"
      app:lottie_autoPlay="true"
      app:lottie_enableMergePathsForKitKatAndAbove="true"
      app:lottie_loop="false"
      app:lottie_rawRes="@raw/onboarding_animation1"
      app:layout_constraintBottom_toTopOf="@id/onboarding_value2_icon"
      app:layout_constraintEnd_toStartOf="@id/onboarding_value1_body"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/onboarding_value2_icon"
      android:layout_width="@dimen/onboarding_value_proposition_image_size"
      android:layout_height="@dimen/onboarding_value_proposition_image_size"
      android:layout_marginVertical="@dimen/normal_margin"
      app:lottie_autoPlay="true"
      app:lottie_enableMergePathsForKitKatAndAbove="true"
      app:lottie_loop="false"
      app:lottie_rawRes="@raw/onboarding_animation2"
      app:layout_constraintBottom_toTopOf="@id/onboarding_value3_icon"
      app:layout_constraintEnd_toStartOf="@id/onboarding_value2_body"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/onboarding_value1_icon"
      />

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/onboarding_value3_icon"
      android:layout_width="@dimen/onboarding_value_proposition_image_size"
      android:layout_height="@dimen/onboarding_value_proposition_image_size"
      android:layout_marginTop="@dimen/normal_margin"
      app:lottie_autoPlay="true"
      app:lottie_enableMergePathsForKitKatAndAbove="true"
      app:lottie_loop="false"
      app:lottie_rawRes="@raw/onboarding_animation3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/onboarding_value3_body"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/onboarding_value2_icon"
      />

  <TextView
      android:id="@+id/onboarding_value1_body"
      style="@style/OnboardingValuesBodyTextStyle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/big_margin"
      tools:text="@string/onboarding_bonus_title"
      app:layout_constraintBottom_toBottomOf="@+id/onboarding_value1_icon"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/onboarding_value1_icon"
      app:layout_constraintTop_toTopOf="@+id/onboarding_value1_icon"
      />

  <TextView
      android:id="@+id/onboarding_value2_body"
      style="@style/OnboardingValuesBodyTextStyle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/big_margin"
      android:text="@string/onboarding_payment_methods_title"
      app:layout_constraintBottom_toBottomOf="@+id/onboarding_value2_icon"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/onboarding_value2_icon"
      app:layout_constraintTop_toTopOf="@+id/onboarding_value2_icon"
      />

  <TextView
      android:id="@+id/onboarding_value3_body"
      style="@style/OnboardingValuesBodyTextStyle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/big_margin"
      android:text="@string/onboarding_vip_title"
      app:layout_constraintBottom_toBottomOf="@+id/onboarding_value3_icon"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/onboarding_value3_icon"
      app:layout_constraintTop_toTopOf="@+id/onboarding_value3_icon"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
