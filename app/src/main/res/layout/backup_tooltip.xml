<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    >

  <androidx.cardview.widget.CardView
      android:id="@+id/backup_tooltip"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:cardCornerRadius="8dp"
      app:cardElevation="0dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/arrow_up_tip"
      app:layout_constraintWidth_default="percent"
      app:layout_constraintWidth_percent=".858"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:id="@+id/dialog_message"
          style="@style/TooltipTextStyle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="14dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="12dp"
          android:text="@string/backup_tooltip_body"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="12dp"
          android:gravity="end"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/dialog_message"
          >

        <com.appcoins.wallet.ui.widgets.WalletButtonView
            android:id="@+id/tooltip_later_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_button_height"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            app:buttonText="@string/backup_tooltip_later_button"
            app:buttonType="outlined"
            />

        <com.appcoins.wallet.ui.widgets.WalletButtonView
            android:id="@+id/tooltip_backup_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_button_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/big_margin"
            app:buttonText="@string/backup_tooltip_backup_button"
            app:buttonType="filled"
            />

      </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
  <ImageView
      android:id="@+id/arrow_up_tip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="15dp"
      android:elevation="1dp"
      android:src="@drawable/ic_tooltip_arrow_up"
      app:layout_constraintEnd_toEndOf="@id/backup_tooltip"
      app:layout_constraintTop_toTopOf="parent"
      />
  <ImageView
      android:id="@+id/icon"
      android:layout_width="26dp"
      android:layout_height="26dp"
      android:layout_marginBottom="10dp"
      android:src="@drawable/ic_backup_white"
      app:layout_constraintEnd_toEndOf="@id/arrow_up_tip"
      app:layout_constraintStart_toStartOf="@id/arrow_up_tip"
      app:layout_constraintTop_toTopOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>