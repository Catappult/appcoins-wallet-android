<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/styleguide_blue"
    >

  <androidx.compose.ui.platform.ComposeView
      android:id="@+id/header"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/content_scroll"
      />

  <ScrollView
      android:id="@+id/content_scroll"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/header"
      android:fillViewport="true"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gamification_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/styleguide_blue"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/normal_margin"
        app:cardBackgroundColor="@color/styleguide_white"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toBottomOf="@id/header"
        >

      <TextView
          android:id="@+id/title_nft"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="24dp"
          android:text="@string/nfts_title"
          android:textColor="@color/styleguide_white"
          android:textSize="24sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toTopOf="@id/nft_image_card"
          />

      <androidx.cardview.widget.CardView
          android:id="@+id/nft_image_card"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/title_nft"
          android:layout_marginHorizontal="24dp"
          app:cardCornerRadius="16dp"
          app:layout_constraintBottom_toTopOf="@id/nft_title"
          >

        <ImageView
            android:id="@+id/nft_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/nfts_error"
            tools:src="@drawable/gamification_unknown_planet_green_reached"
            android:transitionName="nft_image_transition"
            app:layout_constraintDimensionRatio="1:1"
            />

        <include
            android:id="@+id/nft_image_skeleton"
            layout="@layout/skeleton_rounded_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintDimensionRatio="1:1"
            />
      </androidx.cardview.widget.CardView>

      <TextView
          android:id="@+id/nft_title"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:fontFamily="@font/roboto_bolt"
          android:textColor="@color/styleguide_light_grey"
          android:textSize="24sp"
          android:transitionName="nft_title_transition"
          app:layout_constraintBottom_toTopOf="@id/nft_subtitle"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="@id/nft_image_card"
          app:layout_constraintTop_toBottomOf="@id/nft_image_card"
          tools:text="Title"
          />

      <TextView
          android:id="@+id/nft_subtitle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="16dp"
          android:fontFamily="@font/roboto_medium"
          android:textColor="@color/styleguide_dark_grey"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="@id/nft_title"
          app:layout_constraintStart_toStartOf="@id/nft_title"
          app:layout_constraintTop_toBottomOf="@id/nft_title"
          tools:text="Sub-Title"
          />

      <com.appcoins.wallet.ui.widgets.WalletButtonView
          android:id="@+id/nft_transact_button"
          android:layout_width="match_parent"
          android:layout_height="@dimen/large_button_height"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginBottom="27dp"
          app:buttonText="@string/nfts_transact_button"
          app:buttonType="filled"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>