<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_adyen_payment_buttons_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/big_margin"
    >

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/adyen_payment_back_button"
      android:layout_width="48dp"
      android:layout_height="@dimen/onboarding_button_height"
      android:background="@color/transparent"
      app:cardBackgroundColor="@color/transparent"
      app:cardElevation="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/adyen_payment_buy_button"
      app:rippleColor="@color/styleguide_blue"
      app:shapeAppearance="@style/Home.PillShape"
      app:strokeColor="@color/styleguide_blue"
      app:strokeWidth="1dp"
      >
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_back_button"
        app:tint="@color/styleguide_blue"
        />
  </com.google.android.material.card.MaterialCardView>
  <TextView
      android:id="@+id/adyen_payment_back_description"
      style="@style/TextS"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:maxWidth="100dp"
      android:layout_marginHorizontal="@dimen/big_margin"
      android:fontFamily="@font/roboto_bolt"
      android:text="@string/more_payment_methods_button"
      app:layout_constraintBottom_toBottomOf="@id/adyen_payment_back_button"
      app:layout_constraintEnd_toStartOf="@+id/adyen_payment_buy_button"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/adyen_payment_back_button"
      app:layout_constraintTop_toTopOf="@id/adyen_payment_back_button"
      />
  <com.asfoundation.wallet.ui.common.WalletButtonView
      android:id="@+id/adyen_payment_buy_button"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/large_button_height"
      android:layout_gravity="center_vertical"
      app:buttonText="@string/buy_button"
      app:buttonType="filled"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>