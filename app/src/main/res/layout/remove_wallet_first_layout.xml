<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/backup_button"
      app:layout_constraintTop_toTopOf="parent"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <include
          android:id="@+id/wallet_card"
          layout="@layout/wallet_outlined_card"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="48dp"
          android:layout_marginEnd="16dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <ImageView
          android:id="@+id/backup_icon"
          android:layout_width="58dp"
          android:layout_height="58dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="8dp"
          android:src="@drawable/ic_backup_notification"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="@id/wallet_card"
          app:layout_constraintTop_toBottomOf="@id/wallet_card"
          />
      <TextView
          style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="12dp"
          android:layout_marginBottom="8dp"
          android:text="@string/remove_wallet_body"
          android:textColor="#99000000"
          android:textSize="14sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="@id/wallet_card"
          app:layout_constraintStart_toEndOf="@id/backup_icon"
          app:layout_constraintTop_toTopOf="@id/backup_icon"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

  <com.appcoins.wallet.ui.widgets.WalletButtonView
      android:id="@+id/backup_button"
      android:layout_width="match_parent"
      android:layout_height="@dimen/large_button_height"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      app:buttonText="@string/remove_wallet_backup_button"
      app:buttonType="filled"
      app:layout_constraintBottom_toTopOf="@id/or_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <View
      android:id="@+id/first_half_separator"
      android:layout_width="0dp"
      android:layout_height="2dp"
      android:layout_marginEnd="12dp"
      android:background="#f3f3f3"
      app:layout_constraintBottom_toBottomOf="@id/or_text"
      app:layout_constraintEnd_toStartOf="@id/or_text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/or_text"
      />

  <View
      android:id="@+id/second_half_separator"
      android:layout_width="0dp"
      android:layout_height="2dp"
      android:layout_marginStart="12dp"
      android:background="#f3f3f3"
      app:layout_constraintBottom_toBottomOf="@id/or_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/or_text"
      app:layout_constraintTop_toTopOf="@id/or_text"
      />

  <TextView
      android:id="@+id/or_text"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="@string/common_or"
      android:textColor="#99000000"
      android:textSize="14sp"
      app:layout_constraintBottom_toTopOf="@id/no_backup_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <com.appcoins.wallet.ui.widgets.WalletButtonView
      android:id="@+id/no_backup_button"
      android:layout_width="match_parent"
      android:layout_height="@dimen/large_button_height"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="@dimen/big_margin"
      android:layout_marginEnd="@dimen/big_margin"
      android:layout_marginBottom="16dp"
      app:buttonText="@string/remove_wallet_no_backup_button"
      app:buttonType="outlined"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
