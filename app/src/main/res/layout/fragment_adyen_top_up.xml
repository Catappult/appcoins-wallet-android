<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card"
    android:theme="@style/AdyenMaterialAppTheme"
    >
  <ScrollView
      android:id="@+id/top_up_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:descendantFocusability="beforeDescendants"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:id="@+id/main_currency_code"
          style="@style/TopUpTextStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="33dp"
          android:text="--"
          app:autoSizeStepGranularity="2sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <com.asfoundation.wallet.ui.widget.AutoFitEditText
          android:id="@+id/main_value"
          style="@style/TopUpTextStyle.MainValue"
          android:layout_width="152dp"
          android:layout_height="55dp"
          android:layout_marginTop="5dp"
          android:background="@null"
          android:enabled="false"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:gravity="center"
          android:hint="0"
          android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionNext"
          android:inputType="numberDecimal"
          android:maxWidth="152dp"
          android:maxLength="152"
          android:maxLines="1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/main_currency_code"
          />

      <TextView
          android:id="@+id/converted_value"
          style="@style/TopUpTextStyle.ConvertedValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="--"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/main_value"
          />

      <com.asfoundation.wallet.ui.common.SeparatorView
          android:id="@+id/top_separator_topup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="32dp"
          android:visibility="invisible"
          app:line_type="solid"
          app:line_orientation="horizontal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/value_warning_text"
          />

      <TextView
          android:id="@+id/value_warning_text"
          style="@style/TopUpTextStyle.ValueWarning"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="13dp"
          android:text="@string/topup_minimum_value"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/converted_value"
          />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/payment_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="18dp"
          android:paddingStart="25dp"
          android:paddingEnd="25dp"
          app:layout_constraintTop_toBottomOf="@id/top_separator_topup"
          >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/credit_card_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              >
            <include
                android:id="@+id/adyen_card_form"
                layout="@layout/selected_payment_method_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/change_card_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/adyen_card_form"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="5sp"
                android:text="@string/activity_iab_change_card"
                android:textColor="@color/btn_cancel_text"
                android:textSize="12sp"
                android:visibility="gone"
                />
          </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:indeterminateDrawable="@drawable/gradient_progress"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <include
          android:id="@+id/bonus_layout"
          layout="@layout/view_purchase_bonus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:visibility="gone"
          app:layout_constraintBottom_toTopOf="@+id/bonus_msg"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/payment_container"
          app:layout_constraintVertical_bias="0"
          app:layout_constraintVertical_chainStyle="packed"
          />

      <TextView
          android:id="@+id/bonus_msg"
          style="@style/TopUpTextStyle.Small.BonusText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="11dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:layout_marginBottom="21dp"
          android:gravity="center"
          android:text="@string/gamification_purchase_body"
          android:visibility="gone"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/bonus_layout"
          app:layout_constraintVertical_bias="0"
          />

      <Button
          android:id="@+id/button"
          style="@style/ButtonStyle.Alternative"
          android:layout_width="match_parent"
          android:layout_height="@dimen/button_height"
          android:layout_marginStart="40dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="40dp"
          android:layout_marginBottom="80dp"
          android:enabled="false"
          android:text="@string/action_next"
          android:visibility="invisible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@id/bonus_msg"
          app:layout_constraintVertical_bias="1.0"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>

  <include
      android:id="@+id/no_network"
      layout="@layout/no_network_retry_only_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <include
      android:id="@+id/fragment_adyen_error"
      layout="@layout/error_top_up_layout"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>