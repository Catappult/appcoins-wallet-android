<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card"
    android:theme="@style/AdyenMaterialAppTheme"
    >
  <ScrollView
      android:id="@+id/top_up_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:descendantFocusability="beforeDescendants"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:id="@+id/main_currency_code"
          style="@style/TopUpTextStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="33dp"
          android:text="--"
          app:autoSizeStepGranularity="2sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <com.asfoundation.wallet.ui.widget.AutoFitEditText
          android:id="@+id/main_value"
          style="@style/TopUpTextStyle.MainValue"
          android:layout_width="152dp"
          android:layout_height="55dp"
          android:layout_marginTop="5dp"
          android:background="@null"
          android:enabled="false"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:gravity="center"
          android:hint="0"
          android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionNext"
          android:inputType="numberDecimal"
          android:maxWidth="152dp"
          android:maxLength="152"
          android:maxLines="1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/main_currency_code"
          />

      <TextView
          android:id="@+id/converted_value"
          style="@style/TopUpTextStyle.ConvertedValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="--"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/main_value"
          />

      <com.appcoins.wallet.ui.widgets.SeparatorView
          android:id="@+id/top_separator_topup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="32dp"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/value_warning_text"
          app:line_orientation="horizontal"
          app:line_type="solid"
          />

      <TextView
          android:id="@+id/value_warning_text"
          style="@style/TopUpTextStyle.ValueWarning"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="13dp"
          android:text="@string/topup_minimum_value"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/converted_value"
          />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/payment_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:paddingStart="8dp"
          android:paddingEnd="16dp"
          app:layout_constraintTop_toBottomOf="@id/top_separator_topup"
          >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/credit_card_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              >
            <include
                android:id="@+id/adyen_card_form"
                layout="@layout/selected_payment_method_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.appcoins.wallet.ui.widgets.WalletButtonView
                android:id="@+id/change_card_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_button_height"
                android:layout_below="@id/adyen_card_form"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="-16dp"
                android:visibility="gone"
                app:buttonColor="@color/styleguide_pink"
                app:buttonText="Change card"
                app:buttonType="text"
                tools:visibility="visible"
                />
          </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_regular_animation"
            android:visibility="gone"
            tools:visibility="visible"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <include
          android:id="@+id/bonus_layout"
          layout="@layout/view_purchase_bonus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:visibility="gone"
          app:layout_constraintBottom_toTopOf="@+id/bonus_msg"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/payment_container"
          app:layout_constraintVertical_bias="0"
          app:layout_constraintVertical_chainStyle="packed"
          />

      <TextView
          android:id="@+id/bonus_msg"
          style="@style/TopUpTextStyle.Small.BonusText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="11dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:layout_marginBottom="21dp"
          android:gravity="center"
          android:text="@string/gamification_purchase_body"
          android:visibility="gone"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/bonus_layout"
          app:layout_constraintVertical_bias="0"
          />

      <com.appcoins.wallet.ui.widgets.WalletButtonView
          android:id="@+id/button"
          android:layout_width="match_parent"
          android:layout_height="@dimen/large_button_height"
          android:layout_alignParentBottom="true"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:layout_marginBottom="80dp"
          android:enabled="false"
          android:visibility="invisible"
          app:buttonText="@string/action_next"
          app:buttonType="filled"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@id/bonus_msg"
          app:layout_constraintVertical_bias="1.0"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>

  <include
      android:id="@+id/no_network"
      layout="@layout/no_network_retry_only_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <include
      android:id="@+id/fragment_adyen_error"
      layout="@layout/error_top_up_layout"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>