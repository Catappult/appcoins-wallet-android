<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/styleguide_blue"
    android:theme="@style/AdyenMaterialAppTheme"
    >
  <ScrollView
      android:id="@+id/top_up_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:descendantFocusability="beforeDescendants"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/layout_header_top_up"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="16dp"
          android:background="@drawable/rectangle_blue_secondary_radius_16dp"
          android:visibility="gone"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:visibility="visible"
          >
        <TextView
            android:id="@+id/main_currency_code"
            style="@style/TopUpTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:textColor="@color/styleguide_light_grey"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeStepGranularity="2sp"
            app:layout_constraintBottom_toBottomOf="@id/main_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_value"
            tools:text="EUR"
            />

        <com.asfoundation.wallet.ui.widget.AutoFitEditText
            android:id="@+id/main_value"
            style="@style/TopUpTextStyle.MainHeaderValue"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="36dp"
            android:background="@null"
            android:enabled="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionNext"
            android:inputType="numberDecimal"
            android:maxWidth="152dp"
            android:maxLength="152"
            android:maxLines="1"
            android:minWidth="52dp"
            app:autoSizeStepGranularity="2sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_currency_code"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="123"
            />

        <View
            android:id="@+id/header_top_up_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:alpha="0.3"
            android:background="@color/styleguide_dark_grey"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/main_value"
            />

        <include
            android:id="@+id/bonus_layout"
            layout="@layout/view_purchase_bonus_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_top_up_divider"
            tools:visibility="visible"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <com.appcoins.wallet.ui.widgets.SeparatorView
          android:id="@+id/top_separator_topup"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="32dp"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/value_warning_text"
          app:line_orientation="horizontal"
          app:line_type="solid"
          />

      <TextView
          android:id="@+id/value_warning_text"
          style="@style/TopUpTextStyle.ValueWarning"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="13dp"
          android:text="@string/topup_minimum_value"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/layout_header_top_up"
          />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/payment_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:paddingStart="8dp"
          android:paddingEnd="0dp"
          app:layout_constraintTop_toBottomOf="@id/top_separator_topup"
          >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/credit_card_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            >

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              >

            <include
                android:id="@+id/adyen_card_form"
                layout="@layout/selected_payment_method_cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.appcoins.wallet.ui.widgets.WalletButtonView
                android:id="@+id/change_card_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_button_height"
                android:layout_below="@id/adyen_card_form"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="-4dp"
                android:visibility="gone"
                app:buttonColor="@color/styleguide_pink"
                app:buttonText="@string/activity_iab_change_card_lower_case_button"
                app:buttonType="text"
                tools:visibility="visible"
                />

            <com.appcoins.wallet.ui.widgets.WalletButtonView
                android:id="@+id/more_payment_methods"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/small_button_height"
                android:layout_below="@id/change_card_button"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="-4dp"
                android:visibility="visible"
                app:buttonColor="@color/styleguide_pink"
                app:buttonText="@string/purchase_more_payment_methods_lower_case_button"
                app:buttonType="text"
                tools:visibility="visible"
                />

          </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

      </androidx.constraintlayout.widget.ConstraintLayout>

      <com.airbnb.lottie.LottieAnimationView
          android:id="@+id/loading"
          android:layout_width="128dp"
          android:layout_height="128dp"
          android:layout_marginTop="32dp"
          android:layout_marginBottom="50dp"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.333333"
          app:lottie_autoPlay="true"
          app:lottie_enableMergePathsForKitKatAndAbove="true"
          app:lottie_loop="true"
          app:lottie_rawRes="@raw/loading_wallet"
          tools:visibility="visible"
          />

      <TextView
          android:id="@+id/bonus_msg"
          style="@style/TopUpTextStyle.Small.BonusText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="11dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:layout_marginBottom="21dp"
          android:gravity="center"
          android:text="@string/gamification_purchase_body"
          android:visibility="gone"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/payment_container"
          />

      <com.appcoins.wallet.ui.widgets.WalletButtonView
          android:id="@+id/button"
          android:layout_width="match_parent"
          android:layout_height="@dimen/large_button_height"
          android:layout_alignParentBottom="true"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:layout_marginBottom="80dp"
          android:enabled="false"
          android:visibility="invisible"
          app:buttonText="@string/action_next"
          app:buttonType="filled"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@id/bonus_msg"
          app:layout_constraintVertical_bias="1.0"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>

  <include
      android:id="@+id/no_network"
      layout="@layout/no_network_retry_only_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <include
      android:id="@+id/fragment_adyen_error"
      layout="@layout/error_top_up_layout"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>