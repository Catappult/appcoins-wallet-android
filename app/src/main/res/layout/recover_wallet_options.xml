<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark_gradient"
    >

  <TextView
      android:id="@+id/recover_wallet_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/my_wallets_action_recover_wallet"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/OnboardingWelcomeTitleTextStyle"
      />
  <TextView
      android:id="@+id/recover_wallet_subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/onboarding_subtitle_margin_top"
      android:text="@string/import_wallet_body"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/recover_wallet_title"
      style="@style/OnboardingWelcomeSubtitleTextStyle"
      />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/label_input"
      style="@style/RecoverWalletTextInputLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="28dp"
      android:layout_marginEnd="16dp"
      android:maxHeight="191dp"
      app:layout_constraintTop_toBottomOf="@id/recover_wallet_subtitle"
      >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/keystore_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:hint="@string/import_wallet_keystore_private_keys"
        android:imeOptions="actionUnspecified|flagNoFullscreen|flagNoExtractUi"
        />
  </com.google.android.material.textfield.TextInputLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/separator"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/label_input"
      >
    <View
        android:id="@+id/first_half_separator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="12dp"
        android:background="@color/grey_7f"
        app:layout_constraintBottom_toBottomOf="@id/or_text"
        app:layout_constraintEnd_toStartOf="@id/or_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/or_text"
        />

    <View
        android:id="@+id/second_half_separator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="12dp"
        android:background="@color/grey_7f"
        app:layout_constraintBottom_toBottomOf="@id/or_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/or_text"
        app:layout_constraintTop_toTopOf="@id/or_text"
        />

    <TextView
        android:id="@+id/or_text"
        style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_or"
        android:textColor="@color/grey_7f"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <com.asfoundation.wallet.ui.common.WalletButtonView
      android:id="@+id/recover_from_file_button"
      android:layout_width="0dp"
      android:layout_height="@dimen/onboarding_button_height"
      android:layout_marginTop="35dp"
      app:buttonText="@string/my_wallets_action_recover_wallet"
      app:buttonType="outlined"
      app:buttonColor="@color/white"
      app:layout_constraintTop_toBottomOf="@id/separator"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"

      />

  <com.asfoundation.wallet.ui.common.WalletButtonView
      android:id="@+id/recover_wallet_button"
      android:layout_width="0dp"
      android:layout_height="@dimen/onboarding_button_height"
      android:layout_marginBottom="30dp"
      android:layout_marginStart="27dp"
      android:layout_marginTop="@dimen/onboarding_button_existent_margin_top"
      app:buttonText="@string/my_wallets_action_recover_wallet"
      app:buttonType="filled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/recover_wallet_back_button"
      />

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/recover_wallet_back_button"
      android:layout_width="48dp"
      android:layout_height="@dimen/onboarding_button_height"
      android:background="@color/transparent"
      app:cardBackgroundColor="@color/transparent"
      app:cardElevation="0dp"
      app:layout_constraintEnd_toStartOf="@+id/recover_wallet_button"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/recover_wallet_button"
      app:rippleColor="@color/white"
      app:shapeAppearance="@style/Home.PillShape"
      app:strokeColor="@color/white"
      app:strokeWidth="1dp"
      >
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_back_button"
        />
  </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>