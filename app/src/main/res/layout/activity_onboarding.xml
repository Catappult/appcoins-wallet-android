<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:id="@+id/wallet_creation_animation"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/faded_background_color"
      android:gravity="center"
      android:orientation="vertical"
      android:visibility="gone"
      >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/create_wallet_animation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/create_wallet_loading_animation"
        />

    <TextView
        android:id="@+id/create_wallet_text"
        style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/provide_wallet_creating_wallet_header"
        />
  </LinearLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/onboarding_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/activity_background_color"
      >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_onboarding_portrait"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/animation_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_rawRes="@raw/onboarding_portrait"
        />

    <com.rd.PageIndicatorView
        android:id="@+id/page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lottie_onboarding_portrait"
        app:piv_animationType="none"
        app:piv_count="3"
        app:piv_padding="30dp"
        app:piv_radius="4dp"
        app:piv_selectedColor="@color/selection_dot_selected"
        app:piv_unselectedColor="@color/selection_dot_unselected"
        app:piv_viewPager="@id/onboarding_viewpager"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/onboarding_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@id/text_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/animation_guideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_guideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payment_methods_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:visibility="invisible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/onboarding_viewpager"
        />

    <LinearLayout
        android:id="@+id/terms_conditions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_methods_recycler_view"
        >
      <CheckBox
          android:id="@+id/onboarding_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:buttonTint="@color/selection_dot_selected"
          />
      <TextView
          android:id="@+id/terms_conditions_body"
          style="@style/OnboardingTermsConditionsTextStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:clickable="true"
          android:focusable="true"
          android:gravity="start"
          tools:text="@string/terms_and_conditions_tickbox"
          />
    </LinearLayout>

    <TextView
        android:id="@+id/terms_conditions_warning"
        style="@style/OnboardingTermsConditionsTextStyle.Warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:gravity="center"
        android:text="@string/terms_and_conditions_error"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terms_conditions_layout"
        />

    <Button
        android:id="@+id/next_button"
        style="@style/ButtonStyle.Alternative"
        android:layout_width="120dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="20dp"
        android:text="@string/action_next"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/terms_conditions_warning"
        />

    <Button
        android:id="@+id/skip_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="46dp"
        android:fontFamily="sans-serif-medium"
        android:maxWidth="126dp"
        android:minWidth="80dp"
        android:text="@string/skip_with_arrow"
        android:textColor="@color/btn_cancel_text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_viewpager"
        />


  </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>