<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <ImageView
      android:id="@+id/bonus_update_symbol"
      android:layout_width="38dp"
      android:layout_height="38dp"
      android:src="@drawable/ic_bonus_updated"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/bonus_update_text"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="88dp"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="88dp"
      android:lineSpacingExtra="4sp"
      android:textAlignment="center"
      android:textColor="#99000f19"
      android:textSize="11sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/bonus_update_symbol"
      tools:text="Bonus percentages were updated on April 1st 2020"
      />

</androidx.constraintlayout.widget.ConstraintLayout>