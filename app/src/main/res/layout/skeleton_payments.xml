<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    >
  <com.facebook.shimmer.ShimmerFrameLayout
      android:id="@+id/main_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:shimmer_base_alpha="1"
      app:shimmer_base_color="@color/skeleton_light_base_color"
      app:shimmer_colored="true"
      app:shimmer_duration="1000"
      app:shimmer_highlight_color="@color/skeleton_higlight_color"
      >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/skeleton_row"
        />
  </com.facebook.shimmer.ShimmerFrameLayout>
  <com.facebook.shimmer.ShimmerFrameLayout
      android:layout_width="108dp"
      android:layout_height="16dp"
      android:layout_marginStart="80dp"
      app:layout_constraintBottom_toBottomOf="@id/main_background"
      app:layout_constraintStart_toStartOf="@id/main_background"
      app:layout_constraintTop_toTopOf="@id/main_background"
      app:shimmer_base_alpha="1"
      app:shimmer_base_color="@color/skeleton_dark_base_color"
      app:shimmer_colored="true"
      app:shimmer_duration="1000"
      app:shimmer_highlight_color="@color/skeleton_higlight_color"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/skeleton_row"
        />
  </com.facebook.shimmer.ShimmerFrameLayout>
  <com.facebook.shimmer.ShimmerFrameLayout
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginStart="42dp"
      app:layout_constraintBottom_toBottomOf="@id/main_background"
      app:layout_constraintStart_toStartOf="@id/main_background"
      app:layout_constraintTop_toTopOf="@id/main_background"
      app:shimmer_base_alpha="1"
      app:shimmer_base_color="@color/skeleton_dark_base_color"
      app:shimmer_colored="true"
      app:shimmer_duration="1000"
      app:shimmer_highlight_color="@color/skeleton_higlight_color"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/skeleton_row"
        />
  </com.facebook.shimmer.ShimmerFrameLayout>

  <com.facebook.shimmer.ShimmerFrameLayout
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="@id/main_background"
      app:layout_constraintStart_toStartOf="@id/main_background"
      app:layout_constraintTop_toTopOf="@id/main_background"
      app:shimmer_base_alpha="1"
      app:shimmer_base_color="@color/skeleton_dark_base_color"
      app:shimmer_colored="true"
      app:shimmer_duration="1000"
      app:shimmer_highlight_color="@color/skeleton_higlight_color"
      app:shimmer_shape="radial"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/skeleton_circle"
        />
  </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>