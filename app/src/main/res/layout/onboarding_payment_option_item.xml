<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payment_option_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/normal_margin"
    android:background="@drawable/background_card_payment_active"
    >

  <ImageView
      android:id="@+id/payment_option_item_icon"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_margin="@dimen/big_margin"
      tools:src="@drawable/ic_payment_method_paypal"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <TextView
      android:id="@+id/payment_option_item_title"
      style="@style/TextS"
      android:textColor="@color/styleguide_light_grey"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/big_margin"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintEnd_toStartOf="@id/payment_option_item_arrow"
      app:layout_constraintStart_toEndOf="@id/payment_option_item_icon"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:text="Paypal"
      />

  <ImageView
      android:id="@+id/payment_option_item_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/big_margin"
      android:src="@drawable/ic_arrow_right"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@id/payment_option_item_title"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />


</androidx.constraintlayout.widget.ConstraintLayout>