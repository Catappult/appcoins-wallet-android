<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backup_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card"
    android:elevation="10dp"
    android:theme="@style/MaterialAppTheme"
    android:visibility="invisible"
    tools:visibility="visible"
    >

  <TextView
      android:id="@+id/dialog_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="14dp"
      android:layout_marginTop="20dp"
      android:fontFamily="sans-serif-medium"
      android:letterSpacing="0.01"
      android:lineSpacingExtra="6sp"
      android:text="@string/backup_save_dialogue_title"
      android:textColor="@color/black"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/dialog_subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="10dp"
      android:ellipsize="end"
      android:fontFamily="sans-serif"
      android:letterSpacing="0.01"
      android:lineSpacingExtra="6sp"
      android:text="@string/backup_save_dialogue_body"
      android:textColor="#727272"
      android:textSize="12sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="@id/dialog_title"
      app:layout_constraintTop_toBottomOf="@id/dialog_title"
      />
  <TextView
      android:id="@+id/store_path"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="10dp"
      android:ellipsize="end"
      android:fontFamily="sans-serif-medium"
      android:letterSpacing="0.01"
      android:lineSpacingExtra="6sp"
      android:textColor="#fe7073"
      android:textSize="14sp"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="@id/dialog_subtitle"
      app:layout_constraintTop_toBottomOf="@id/dialog_subtitle"
      tools:text="/Storage/downloads/backup"
      tools:visibility="visible"
      />
  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/edit_text_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="20dp"
      android:inputType="textImeMultiLine"
      android:imeOptions="actionDone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="@id/store_path"
      app:layout_constraintTop_toBottomOf="@id/store_path"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="12dp"
      android:layout_marginBottom="12dp"
      android:clipChildren="false"
      android:clipToPadding="false"
      android:gravity="end"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/edit_text_name"
      >
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backup_cancel"
        style="@style/CancelBorderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/big_margin"
        android:maxWidth="126dp"
        android:minWidth="80dp"
        android:text="@string/cancel"
        android:textColor="@color/dialog_buy_value_text"
        android:textSize="12sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backup_save"
        style="@style/ButtonStyle.Alternative"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:maxWidth="126dp"
        android:minWidth="80dp"
        android:text="@string/backup_save_button"
        android:textColor="@color/white"
        android:textSize="12sp"
        />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>