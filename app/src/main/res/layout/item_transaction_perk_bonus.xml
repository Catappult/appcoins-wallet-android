<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/styleguide_white"
    android:elevation="@dimen/component_elevation"
    >

  <ImageView
      android:id="@+id/img"
      android:layout_width="100dp"
      android:layout_height="96dp"
      android:layout_marginStart="2dp"
      android:contentDescription="@string/empty"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@drawable/transactions_promotion_bonus"
      />
  <TextView
      android:id="@+id/bonus_title"
      style="@style/TransactionsItem.Title.Special"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="15dp"
      android:layout_marginEnd="16dp"
      android:paddingHorizontal="8dp"
      android:paddingVertical="5dp"
      app:layout_constraintBottom_toTopOf="@id/bonus_description"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toEndOf="@id/img"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed"
      app:layout_constraintWidth_default="wrap"
      tools:text="+100 Appcoins Credits Bonus!"
      />
  <TextView
      android:id="@+id/bonus_description"
      style="@style/TransactionsItem.Description.Extended"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="14dp"
      android:paddingHorizontal="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/img"
      app:layout_constraintTop_toBottomOf="@id/bonus_title"
      tools:text="Because you spent more than 200 AppCoins in the last 5 days."

      />
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/styleguide_light_grey"
      app:layout_constraintBottom_toBottomOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>