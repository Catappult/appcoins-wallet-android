<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MaterialAppTheme"
    android:background="@drawable/background_dark_gradient"
    >

  <TextView
      android:id="@+id/recover_wallet_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/my_wallets_action_recover_wallet"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      style="@style/OnboardingWelcomeTitleTextStyle"
      />
  <TextView
      android:id="@+id/recover_wallet_subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/onboarding_subtitle_margin_top"
      android:text="@string/import_wallet_password_body"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/recover_wallet_title"
      style="@style/OnboardingWelcomeSubtitleTextStyle"
      />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:background="@color/bottom_nav_top_up_blue"
      app:layout_constraintTop_toBottomOf="@id/recover_wallet_subtitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/ic_wallet_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_wallet_address_new"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/wallet_balance"
        style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/ic_wallet_address"
        app:layout_constraintTop_toTopOf="@id/ic_wallet_address"
        tools:text="$2.40"
        />

    <TextView
        android:id="@+id/wallet_address"
        style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/ic_wallet_address"
        app:layout_constraintTop_toBottomOf="@id/wallet_balance"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0xJIUGIUDNGNFUIGNUINGIUFNIFNIUNGIUFNGIUFNIUGNIUFNGINFINGIUNUIFGNIFG"/>


    <com.asfoundation.wallet.ui.backup.entry.PasswordInputLayout
        android:id="@+id/label_input"
        style="@style/PasswordTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ic_wallet_address"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/recover_wallet_password_edit_text"
          style="@style/PasswordEditText"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="top"
          />
    </com.asfoundation.wallet.ui.backup.entry.PasswordInputLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>