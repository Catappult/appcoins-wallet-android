<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verification_purchase_error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/styleguide_blue"
    >

  <ImageView
      android:id="@+id/verification_error_animation"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/ic_error_pink"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline_top"
      />

  <TextView
      android:id="@+id/error_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="23dp"
      android:fontFamily="sans-serif"
      android:letterSpacing="0.03"
      android:lineSpacingExtra="4sp"
      android:text="@string/error_general"
      android:textAlignment="center"
      android:textColor="@color/styleguide_payments_main_text"
      android:textSize="20sp"
      android:textStyle="bold"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/verification_error_animation"
      tools:visibility="visible"
      />

  <TextView
      android:id="@+id/error_title_2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="35dp"
      android:layout_marginTop="23dp"
      android:layout_marginEnd="35dp"
      android:fontFamily="sans-serif-medium"
      android:letterSpacing="0.03"
      android:lineSpacingExtra="4sp"
      android:text="@string/card_verification_no_attempts_title"
      android:textAlignment="center"
      android:textColor="@color/styleguide_dark_grey"
      android:textSize="16sp"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/verification_error_animation"
      />

  <TextView
      android:id="@+id/error_message"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="@dimen/big_margin"
      android:layout_marginEnd="16dp"
      android:text="@string/unknown_error"
      android:textAlignment="center"
      android:textColor="@color/styleguide_dark_grey"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/error_title"
      />

  <TextView
      android:id="@+id/error_message_2"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="@dimen/big_margin"
      android:layout_marginEnd="16dp"
      android:text="@string/card_verification_no_attempts_body"
      android:textAlignment="center"
      android:textColor="@color/styleguide_dark_grey"
      android:textSize="16sp"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/error_title_2"
      />

  <TextView
      android:id="@+id/contact_us"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="42dp"
      android:text="@string/error_contac_us_body"
      android:textAlignment="center"
      android:textColor="@color/styleguide_dark_grey"
      android:textSize="12sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/error_message"
      />

  <ImageView
      android:id="@+id/layout_support_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="18dp"
      android:layout_marginEnd="@dimen/small_margin"
      android:src="@drawable/ic_logo_appc_support_light"
      app:layout_constraintEnd_toStartOf="@id/layout_support_icn"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/contact_us"
      />

  <ImageView
      android:id="@+id/layout_support_icn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/small_margin"
      android:src="@drawable/ic_open_in_24"
      app:layout_constraintBottom_toBottomOf="@id/layout_support_logo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/layout_support_logo"
      app:layout_constraintTop_toTopOf="@id/layout_support_logo"
      />

  <com.appcoins.wallet.ui.widgets.WalletButtonView
      android:id="@+id/maybe_later"
      android:layout_width="match_parent"
      android:layout_height="@dimen/large_button_height"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="@dimen/big_margin"
      android:layout_marginTop="6dp"
      android:layout_marginEnd="@dimen/big_margin"
      android:layout_marginBottom="63dp"
      app:buttonText="@string/backup_tooltip_later_button"
      app:buttonType="outlined"
      app:layout_constraintTop_toBottomOf="@+id/try_again_attempts"
      app:layout_constraintVertical_bias="1"
      />

  <com.appcoins.wallet.ui.widgets.WalletButtonView
      android:id="@+id/try_again"
      android:layout_width="match_parent"
      android:layout_height="@dimen/large_button_height"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="@dimen/big_margin"
      android:layout_marginEnd="@dimen/big_margin"
      android:layout_marginBottom="86dp"
      app:buttonText="@string/try_again"
      app:buttonType="filled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/layout_support_logo"
      app:layout_constraintVertical_bias="1"
      />

  <com.appcoins.wallet.ui.widgets.WalletButtonView
      android:id="@+id/try_again_attempts"
      android:layout_width="match_parent"
      android:layout_height="@dimen/large_button_height"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="@dimen/big_margin"
      android:layout_marginEnd="@dimen/big_margin"
      android:layout_marginBottom="86dp"
      app:buttonText="@string/try_again"
      app:buttonType="filled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/layout_support_logo"
      app:layout_constraintVertical_bias="1"
      />

  <androidx.constraintlayout.widget.Group
      android:id="@+id/attempts_group"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="invisible"
      app:constraint_referenced_ids="maybe_later,try_again_attempts"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_top"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.2"
      />


</androidx.constraintlayout.widget.ConstraintLayout>

