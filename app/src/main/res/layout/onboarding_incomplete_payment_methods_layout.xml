<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/incomplete_payment_methods_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/normal_margin"
    android:background="@drawable/background_card_active_wallet"
    >

  <TextView
      android:id="@+id/incomplete_payment_methods_title"
      style="@style/TextS"
      android:layout_width="0dp"
      android:textColor="@color/styleguide_light_grey"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/normal_margin"
      android:text="@string/other_payment_methos_title"
      app:layout_constraintBottom_toTopOf="@id/incomplete_payment_methods_text_list"
      app:layout_constraintEnd_toStartOf="@id/back_to_game_arrow"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/incomplete_payment_methods_text_list"
      style="@style/TextS"
      android:textColor="@color/styleguide_light_grey"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/normal_margin"
      android:lineSpacingMultiplier="0.5"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/back_to_game_arrow"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/incomplete_payment_methods_title"
      tools:text="GO-PAY, OVO, DANA, LinkAja, Doku wallet"
      />

  <ImageView
      android:id="@+id/back_to_game_arrow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/normal_margin"
      android:src="@drawable/ic_arrow_right"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/incomplete_payment_methods_title"
      app:layout_constraintTop_toTopOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
