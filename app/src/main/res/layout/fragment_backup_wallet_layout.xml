<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    >
  <ScrollView
      android:id="@+id/backup_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/backup_button_layout"
      app:layout_constraintTop_toTopOf="parent"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="@dimen/big_margin"
        >
      <include
          android:id="@+id/wallet_backup_info"
          layout="@layout/layout_wallet_backup_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/big_margin"
          app:layout_constraintTop_toTopOf="parent"
          />
      <include
          layout="@layout/layout_backup_password_toggle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          app:layout_constraintTop_toBottomOf="@id/wallet_backup_info"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/backup_button_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clipChildren="false"
      android:clipToPadding="false"
      app:layout_constraintBottom_toBottomOf="parent"
      >
    <View
        android:id="@+id/grid_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_transparent_10"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.asfoundation.wallet.ui.common.WalletButtonView
        android:id="@+id/backup_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_button_height"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        app:buttonText="@string/backup_button"
        app:buttonType="filled"
        app:layout_constraintTop_toTopOf="@+id/grid_line"
        />

    <com.asfoundation.wallet.ui.common.WalletButtonView
        android:id="@+id/backup_skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/large_button_height"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/big_margin"
        android:paddingHorizontal="@dimen/half_large_padding"
        app:buttonText="@string/backup_skip_button"
        app:buttonType="text"
        app:buttonColor="@color/grey_blue_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backup_btn"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
