<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/payment_method_background"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    >

  <ImageView
      android:id="@+id/app_icon"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:adjustViewBounds="true"
      android:contentDescription="@string/empty"
      android:lineSpacingExtra="0.25sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@drawable/ic_transaction_peer"
      />

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/app_icon_animation"
      android:layout_width="64dp"
      android:layout_height="64dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:lottie_autoPlay="true"
      app:lottie_enableMergePathsForKitKatAndAbove="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/icon_skeleton"
      app:lottie_scale="1"
      />

  <TextView
      android:id="@+id/app_name"
      style="@style/TextAppearance.AppCompat.Headline.Roboto.Medium"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:layout_marginStart="12dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:textColor="@color/black_87_alpha"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/app_icon"
      app:layout_constraintTop_toTopOf="@id/app_icon"
      tools:text="Cut the Rope 2gnasfigdsnsifdbngoisnoignsiudbgiubsfdiugbiusbgiusbfiugbisbgbsfdiugbisu"
      />

  <TextView
      android:id="@+id/total_value"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:ellipsize="end"
      android:maxLines="1"
      android:textColor="@color/black_87_alpha"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@id/app_name"
      app:layout_constraintTop_toBottomOf="@id/app_name"
      tools:text="$2.40 /month"
      />

  <TextView
      android:id="@+id/total_value_appc"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:fontFamily="sans-serif"
      android:textColor="@color/dialog_secondary_price"
      android:textSize="11sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@id/app_name"
      app:layout_constraintTop_toBottomOf="@id/total_value"
      tools:text="~69.90 APPC"
      />

</androidx.constraintlayout.widget.ConstraintLayout>