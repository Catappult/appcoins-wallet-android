<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/collapsable_bar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/appbar_background_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/MyWallets.HeaderShape"
        />

    <TextView
        android:id="@+id/title"
        style="@style/MyWallets.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="@string/wallets_active_wallet_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/action_button_more"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_more"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/qr_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:shapeAppearance="@style/MyWallets.Shapes.Rounded8"
        tools:src="@drawable/ic_qr_code"
        />

    <ImageButton
        android:id="@+id/action_button_copy_address"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_copy_to_clip"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/qr_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/qr_image"
        app:layout_constraintTop_toTopOf="@+id/qr_image"
        />

    <ImageButton
        android:id="@+id/action_button_share_address"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_share_white"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/qr_image"
        app:layout_constraintEnd_toStartOf="@+id/qr_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/qr_image"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/wallet_address_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"

        app:cardBackgroundColor="@color/light_grey_alpha_73"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_image"
        app:shapeAppearance="@style/MyWallets.Shapes.Pill"
        >
      <TextView
          android:id="@+id/wallet_address_text_view"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:maxLines="1"
          android:paddingStart="10dp"
          android:paddingTop="5dp"
          android:paddingEnd="10dp"
          android:paddingBottom="5dp"
          android:textColor="@color/grey_9d"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/qr_image"
          tools:text="0x74157826eb67852dbfb4770a5ff9218cca7b312d"
          />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/total_balance_label_text_view"
        style="@style/MyWallets.TotalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/wallet_view_total_balance_title"
        app:layout_constraintEnd_toStartOf="@+id/total_balance_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallet_address_card_view"
        />

    <TextView
        android:id="@+id/total_balance_text_view"
        style="@style/MyWallets.TotalBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_balance_label_text_view"
        app:layout_constraintTop_toBottomOf="@+id/wallet_address_card_view"
        tools:text="â‚¬31,657.13"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/total_balance_skeleton"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="64dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_balance_label_text_view"
        app:layout_constraintTop_toBottomOf="@+id/wallet_address_card_view"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/balance_overall_animation"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/appcoins_credits_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        app:cardBackgroundColor="@color/light_grey_alpha_73"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@id/eth_card_view"
        app:layout_constraintStart_toEndOf="@id/appcoins_card_view"
        app:layout_constraintTop_toBottomOf="@+id/total_balance_label_text_view"
        app:shapeAppearance="@style/MyWallets.Shapes.Rounded8"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          >

        <ImageView
            android:id="@+id/appcc_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_appc_c_token"
            android:transitionName="token_icon_transition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/appcc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:text="@string/appc_credits_token_name"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:transitionName="token_name_transition"
            app:layout_constraintEnd_toEndOf="@id/appcc_icon"
            app:layout_constraintStart_toStartOf="@id/appcc_icon"
            app:layout_constraintTop_toBottomOf="@id/appcc_icon"
            />

        <TextView
            android:id="@+id/appcc_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/grey_9d"
            android:textSize="12sp"
            android:transitionName="token_name_transition"
            app:layout_constraintEnd_toEndOf="@id/appcc_icon"
            app:layout_constraintStart_toStartOf="@id/appcc_icon"
            app:layout_constraintTop_toBottomOf="@id/appcc_name"
            tools:text="5244"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/appcc_value_skeleton"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@id/appcc_icon"
            app:layout_constraintStart_toStartOf="@id/appcc_icon"
            app:layout_constraintTop_toBottomOf="@id/appcc_name"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/balance_token_animation"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/appcoins_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        app:cardBackgroundColor="@color/light_grey_alpha_73"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@+id/appcoins_credits_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_balance_label_text_view"
        app:shapeAppearance="@style/MyWallets.Shapes.Rounded8"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          >

        <ImageView
            android:id="@+id/appc_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_appc_token"
            android:transitionName="token_icon_transition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/appc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:text="@string/appc_token_name"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:transitionName="token_name_transition"
            app:layout_constraintEnd_toEndOf="@id/appc_icon"
            app:layout_constraintStart_toStartOf="@id/appc_icon"
            app:layout_constraintTop_toBottomOf="@id/appc_icon"
            />

        <TextView
            android:id="@+id/appc_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/grey_9d"
            android:textSize="12sp"
            android:transitionName="token_name_transition"
            app:layout_constraintEnd_toEndOf="@id/appc_icon"
            app:layout_constraintStart_toStartOf="@id/appc_icon"
            app:layout_constraintTop_toBottomOf="@id/appc_name"
            tools:text="5244"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/appc_value_skeleton"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@id/appc_icon"
            app:layout_constraintStart_toStartOf="@id/appc_icon"
            app:layout_constraintTop_toBottomOf="@id/appc_name"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/balance_token_animation"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/eth_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/light_grey_alpha_73"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appcoins_credits_card_view"
        app:layout_constraintTop_toBottomOf="@+id/total_balance_label_text_view"
        app:shapeAppearance="@style/MyWallets.Shapes.Rounded8"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:background="@color/transparent"
          >

        <ImageView
            android:id="@+id/eth_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_eth_token"
            android:transitionName="token_icon_transition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/eth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:lines="1"
            android:text="@string/ethereum_token_name"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:transitionName="token_name_transition"
            app:layout_constraintEnd_toEndOf="@id/eth_icon"
            app:layout_constraintStart_toStartOf="@id/eth_icon"
            app:layout_constraintTop_toBottomOf="@id/eth_icon"
            />

        <TextView
            android:id="@+id/eth_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/grey_9d"
            android:textSize="12sp"
            android:transitionName="token_name_transition"
            app:layout_constraintEnd_toEndOf="@id/eth_icon"
            app:layout_constraintStart_toStartOf="@id/eth_icon"
            app:layout_constraintTop_toBottomOf="@id/eth_name"
            tools:text="5244"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/eth_value_skeleton"
            android:layout_width="80dp"
            android:layout_height="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@id/eth_icon"
            app:layout_constraintStart_toStartOf="@id/eth_icon"
            app:layout_constraintTop_toBottomOf="@id/eth_name"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/balance_token_animation"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/backup_wallet_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/light_grey_alpha_73"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appcoins_card_view"
        app:shapeAppearance="@style/MyWallets.Shapes.Rounded8"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="13dp"
          android:layout_marginBottom="13dp"
          >

        <ImageView
            android:id="@+id/backup_alert_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_alert_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/backup_wallet_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@string/backup_title"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/backup_alert_icon"
            app:layout_constraintEnd_toStartOf="@+id/backup_button"
            app:layout_constraintStart_toEndOf="@+id/backup_alert_icon"
            app:layout_constraintTop_toTopOf="@+id/backup_alert_icon"
            />

        <TextView
            android:id="@+id/backup_wallet_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="Keep a copy of your wallet to keep it safe."
            android:textColor="@color/grey_9d"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/backup_button"
            app:layout_constraintStart_toEndOf="@+id/backup_alert_icon"
            app:layout_constraintTop_toBottomOf="@+id/backup_wallet_title"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backup_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="@string/backup_button"
            android:textColor="@color/white"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/wild_watermelon"
            app:strokeColor="@color/wild_watermelon"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/insert_code_wallet_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/light_grey_alpha_73"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appcoins_card_view"
        app:shapeAppearance="@style/MyWallets.Shapes.Rounded8"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="13dp"
          android:layout_marginBottom="13dp"
          >

        <ImageView
            android:id="@+id/insert_code_alert_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_alert_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/insert_code_wallet_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@string/card_verification_wallets_one_step_title"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/insert_code_alert_icon"
            app:layout_constraintEnd_toStartOf="@+id/insert_code_button"
            app:layout_constraintStart_toEndOf="@+id/insert_code_alert_icon"
            app:layout_constraintTop_toTopOf="@+id/insert_code_alert_icon"
            />

        <TextView
            android:id="@+id/insert_code_wallet_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="@string/card_verification_wallets_one_step_body"
            android:textColor="@color/grey_9d"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/insert_code_button"
            app:layout_constraintStart_toEndOf="@+id/insert_code_alert_icon"
            app:layout_constraintTop_toBottomOf="@+id/insert_code_wallet_title"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/insert_code_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="@string/card_verification_wallets_insert_bode_button"
            android:textColor="@color/white"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/wild_watermelon"
            app:strokeColor="@color/wild_watermelon"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/verify_wallet_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/light_grey_alpha_73"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backup_wallet_card_view"
        app:shapeAppearance="@style/MyWallets.Shapes.Rounded8"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:layout_marginBottom="5dp"
          >

        <ImageView
            android:id="@+id/verify_alert_icon"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_alert_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/verify_wallet_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@string/unferified_tag"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/verify_alert_icon"
            app:layout_constraintEnd_toStartOf="@+id/verify_button"
            app:layout_constraintStart_toEndOf="@+id/verify_alert_icon"
            app:layout_constraintTop_toTopOf="@+id/verify_alert_icon"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/verify_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="@string/verification_wallets_verify_button"
            android:textColor="@color/white"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/wild_watermelon"
            app:strokeColor="@color/wild_watermelon"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/verified_wallet_icon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_wallet_verified_green_white"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/verified_wallet_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backup_wallet_card_view"
        />
    <TextView
        android:id="@+id/verified_wallet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="2dp"
        android:text="@string/verification_settings_verified_title"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/verified_wallet_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/verified_wallet_icon"
        app:layout_constraintTop_toTopOf="@id/verified_wallet_icon"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottom_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="verified_wallet_icon, verify_wallet_card_view"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_barrier"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <com.airbnb.epoxy.EpoxyRecyclerView
      android:id="@+id/other_wallets_recycler_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/collapsable_bar"
      />

</androidx.constraintlayout.widget.ConstraintLayout>