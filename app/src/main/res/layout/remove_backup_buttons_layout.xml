<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/remove_button_layout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/vertical_guideline3"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <ImageView
        android:id="@+id/remove_wallet_button"
        android:layout_width="@dimen/wallets_button_size"
        android:layout_height="@dimen/wallets_button_size"
        android:src="@drawable/ic_remove_wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/remove_text"
        style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="0sp"
        android:maxLines="2"
        android:text="@string/wallet_view_remove_button"
        android:textColor="@color/text_button_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/remove_wallet_button"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".4"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/backup_button_layout"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="32dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@id/vertical_guideline3"
      app:layout_constraintTop_toTopOf="parent"
      >
    <ImageView
        android:id="@+id/backup_wallet_button"
        android:layout_width="@dimen/wallets_button_size"
        android:layout_height="@dimen/wallets_button_size"
        android:src="@drawable/ic_backup_wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/backup_text"
        style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="0sp"
        android:maxLines="2"
        android:text="@string/wallet_view_backup_button"
        android:textColor="@color/text_button_color"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/backup_wallet_button"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".4"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/vertical_guideline1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.15"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/vertical_guideline2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.35"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/vertical_guideline3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.5"
      />
</androidx.constraintlayout.widget.ConstraintLayout>