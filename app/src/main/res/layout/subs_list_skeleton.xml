<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <com.facebook.shimmer.ShimmerFrameLayout
      android:id="@+id/active_skeleton"
      android:layout_width="108dp"
      android:layout_height="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:shimmer_base_alpha="1"
      app:shimmer_base_color="@color/skeleton_dark_base_color"
      app:shimmer_colored="true"
      app:shimmer_duration="1000"
      app:shimmer_highlight_color="@color/skeleton_higlight_color"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/skeleton_row"
        />
  </com.facebook.shimmer.ShimmerFrameLayout>

  <LinearLayout
      android:id="@+id/active_subs_skeletons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:orientation="vertical"
      app:layout_constraintTop_toBottomOf="@id/active_skeleton"
      >
    <include layout="@layout/skeleton_subs" />
    <include layout="@layout/skeleton_subs" />
  </LinearLayout>

  <com.facebook.shimmer.ShimmerFrameLayout
      android:id="@+id/expired_skeleton"
      android:layout_width="108dp"
      android:layout_height="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/active_subs_skeletons"
      app:shimmer_base_alpha="1"
      app:shimmer_base_color="@color/skeleton_dark_base_color"
      app:shimmer_colored="true"
      app:shimmer_duration="1000"
      app:shimmer_highlight_color="@color/skeleton_higlight_color"
      >
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/skeleton_row"
        />
  </com.facebook.shimmer.ShimmerFrameLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:orientation="vertical"
      app:layout_constraintTop_toBottomOf="@id/expired_skeleton"
      >
    <include layout="@layout/skeleton_subs" />
    <include layout="@layout/skeleton_subs" />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>