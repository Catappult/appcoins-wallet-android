<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <include
          android:id="@+id/backup_success_info"
          layout="@layout/layout_backup_success_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="50dp"
          app:layout_constraintTop_toTopOf="parent"
          />
      <include
          layout="@layout/layout_backup_success_tips"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/half_large_margin"
          android:layout_marginTop="50dp"
          app:layout_constraintTop_toBottomOf="@+id/backup_success_info"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
  <com.asfoundation.wallet.ui.common.WalletButtonView
      android:id="@+id/close_button"
      android:layout_width="match_parent"
      android:layout_height="@dimen/large_button_height"
      android:layout_marginHorizontal="@dimen/half_large_margin"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="@dimen/big_margin"
      app:buttonText="@string/backup_confirmation_button"
      app:buttonType="filled"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/email_input"
      />
</androidx.constraintlayout.widget.ConstraintLayout>