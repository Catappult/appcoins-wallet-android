<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/last_bill_title"
      style="@style/TransactionDetailsTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:lineSpacingExtra="0.25sp"
      android:text="@string/subscriptions_details_last_bill"
      android:textColor="@color/styleguide_dark_grey"
      app:layout_constraintEnd_toStartOf="@id/guideline_mid"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/last_bill_value"
      style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:textColor="@color/styleguide_light_grey"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="@id/last_bill_title"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1"
      app:layout_constraintStart_toEndOf="@id/guideline_mid"
      app:layout_constraintTop_toTopOf="@id/last_bill_title"
      tools:text="12/08/2019"
      />

  <TextView
      android:id="@+id/start_date_label"
      style="@style/TransactionDetailsTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:text="@string/subscriptions_details_start_date_title"
      android:textColor="@color/styleguide_dark_grey"
      app:layout_constraintEnd_toStartOf="@id/guideline_mid"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="@+id/last_bill_title"
      app:layout_constraintTop_toBottomOf="@id/last_bill_title"
      />

  <TextView
      android:id="@+id/start_date_value"
      style="@style/TransactionDetailsTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="@+id/last_bill_value"
      app:layout_constraintHorizontal_bias="1"
      app:layout_constraintStart_toEndOf="@id/guideline_mid"
      app:layout_constraintTop_toTopOf="@id/start_date_label"
      tools:text="12/02/2019"
      />

  <TextView
      android:id="@+id/payment_method_label"
      style="@style/TransactionDetailsTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:text="@string/subscriptions_details_payment_method_title"
      android:textColor="@color/styleguide_dark_grey"
      app:layout_constraintEnd_toStartOf="@id/guideline_mid"
      app:layout_constraintHorizontal_bias="0"
      app:layout_constraintStart_toStartOf="@+id/start_date_label"
      app:layout_constraintTop_toBottomOf="@id/start_date_label"
      />

  <TextView
      android:id="@+id/payment_method_value"
      style="@style/TransactionDetailsTextStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="@+id/start_date_value"
      app:layout_constraintHorizontal_bias="1"
      app:layout_constraintStart_toEndOf="@id/guideline_mid"
      app:layout_constraintTop_toTopOf="@id/payment_method_label"
      tools:text="Paypal"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline_mid"
      android:layout_width="1dp"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.5"
      />

</androidx.constraintlayout.widget.ConstraintLayout>