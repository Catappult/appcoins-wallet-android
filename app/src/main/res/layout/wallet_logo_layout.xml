<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/wallet_logo_background"
    android:layout_height="40dp"
    >

    <ImageView
        android:id="@+id/appc_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_appc"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/empty"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/app_name"
        android:fontFamily="sans-serif-medium"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/appc_icon"
        app:layout_constraintStart_toEndOf="@id/appc_icon"
        app:layout_constraintTop_toTopOf="@+id/appc_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>