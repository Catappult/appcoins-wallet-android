<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/styleguide_blue"
    >

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/loading"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_gravity="center"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:lottie_autoPlay="true"
      app:lottie_enableMergePathsForKitKatAndAbove="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/loading_dark_animation"
      />

  <ScrollView
      android:id="@+id/onboarding_content_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginBottom="@dimen/half_large_margin"
      app:layout_constraintBottom_toTopOf="@id/onboarding_action"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.120000005"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <ImageView
          android:id="@+id/onboarding_wallet_icon"
          android:layout_width="@dimen/onboarding_icon_size"
          android:layout_height="@dimen/onboarding_icon_size"
          android:layout_marginTop="@dimen/onboarding_container_margin_top"
          android:src="@drawable/white_app_ic_with_text"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:tint="@color/styleguide_pink"
          />

      <include
          android:id="@+id/onboarding_value_propositions"
          layout="@layout/onboarding_value_propositions"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/half_large_margin"
          android:layout_marginTop="@dimen/onboarding_container_margin_top"
          android:visibility="visible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/onboarding_wallet_icon"
          app:tint="@color/styleguide_white"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/onboarding_action"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/half_large_margin"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/onboarding_content_scroll_view"
      >

    <include
        android:id="@+id/onboarding_buttons"
        layout="@layout/onboarding_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        />

    <include
        android:id="@+id/onboarding_terms_conditions"
        layout="@layout/onboarding_terms_conditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/half_large_margin"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/onboarding_buttons"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.cardview.widget.CardView
      android:id="@+id/onboarding_recover_guest_wallet"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_marginHorizontal="16dp"
      android:layout_marginBottom="16dp"
      android:backgroundTint="@color/styleguide_blue_secondary"
      android:minHeight="200dp"
      android:visibility="invisible"
      app:cardCornerRadius="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/onboarding_content_scroll_view"
      tools:visibility="visible"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <TextView
          android:id="@+id/onboarding_recover_text1"
          style="@style/OnboardingRecoverGuestBodyTextStyle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:gravity="center"
          android:text="@string/intro_from_web_payment_already_have_title"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/onboarding_bonus_layout"
          android:layout_width="wrap_content"
          android:layout_height="38dp"
          android:layout_marginTop="8dp"
          android:background="@color/transparent"
          android:theme="@style/MaterialAppTheme"
          app:cardBackgroundColor="@color/styleguide_blue"
          app:cardElevation="0dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/onboarding_recover_text1"
          app:rippleColor="@color/styleguide_white"
          app:shapeAppearance="@style/Home.PillShape"
          app:strokeWidth="0dp"
          >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

          <ImageView
              android:id="@+id/onboarding_bonus_image"
              android:layout_width="36dp"
              android:layout_height="36dp"
              android:layout_marginStart="12dp"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:src="@drawable/ic_guest_wallet_bonus"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              />

          <TextView
              android:id="@+id/onboarding_recover_text2"
              style="@style/OnboardingRecoverGuestBodyTextStyle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="4dp"
              android:text="@string/monetary_amount_with_symbol"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toEndOf="@+id/onboarding_bonus_image"
              app:layout_constraintTop_toTopOf="parent"
              />

          <TextView
              android:id="@+id/onboarding_recover_text3"
              style="@style/OnboardingRecoverGuestBodyTextStyle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="4dp"
              android:layout_marginEnd="12dp"
              android:text="@string/transaction_type_bonus"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@+id/onboarding_recover_text2"
              app:layout_constraintTop_toTopOf="parent"
              />

          <com.airbnb.lottie.LottieAnimationView
              android:id="@+id/bonus_loading"
              android:layout_width="64dp"
              android:layout_height="64dp"
              android:visibility="visible"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:lottie_autoPlay="true"
              app:lottie_enableMergePathsForKitKatAndAbove="true"
              app:lottie_loop="true"
              app:lottie_rawRes="@raw/three_dots_loading"
              tools:visibility="visible"
              />

        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>

      <TextView
          android:id="@+id/onboarding_recover_text4"
          style="@style/OnboardingRecoverGuestBodyTextStyle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="28dp"
          android:gravity="center"
          android:text="@string/intro_from_web_payment_to_spend_body"
          app:layout_constraintBottom_toTopOf="@+id/onboarding_recover_guest_button"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/onboarding_bonus_layout"
          app:layout_constraintVertical_bias="0.0"
          />

      <com.appcoins.wallet.ui.widgets.WalletButtonView
          android:id="@+id/onboarding_recover_guest_button"
          android:layout_width="0dp"
          android:layout_height="@dimen/onboarding_button_height"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="16dp"
          app:buttonText="@string/intro_get_started_button"
          app:buttonType="filled"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          />

      <com.airbnb.lottie.LottieAnimationView
          android:id="@+id/loading_animation"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:visibility="invisible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.24"
          app:layout_constraintStart_toStartOf="parent"
          app:lottie_autoPlay="true"
          app:lottie_enableMergePathsForKitKatAndAbove="true"
          app:lottie_loop="true"
          app:lottie_rawRes="@raw/loading_wallet"
          />

      <TextView
          android:id="@+id/onboarding_recover_text5"
          style="@style/OnboardingRecoverGuestBodyTextStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/launching_wallet_body"
          android:textColor="@color/styleguide_medium_grey"
          android:visibility="invisible"
          app:layout_constraintBottom_toBottomOf="@+id/loading_animation"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toEndOf="@+id/loading_animation"
          app:layout_constraintTop_toTopOf="@+id/loading_animation"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
