<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_permissions_layout"
    >
  <ImageView
      android:id="@+id/provide_wallet_always_allow_wallet_icon"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:src="@drawable/ic_appc"
      app:layout_constraintBottom_toTopOf="@id/provide_wallet_always_allow_body"
      app:layout_constraintEnd_toStartOf="@id/dot1"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <View
      android:id="@+id/dot1"
      android:layout_width="4dp"
      android:layout_height="4dp"
      android:layout_marginStart="16dp"
      android:background="@color/styleguide_dark_grey"
      app:layout_constraintBottom_toBottomOf="@id/provide_wallet_always_allow_wallet_icon"
      app:layout_constraintEnd_toStartOf="@id/dot2"
      app:layout_constraintStart_toEndOf="@id/provide_wallet_always_allow_wallet_icon"
      app:layout_constraintTop_toTopOf="@id/provide_wallet_always_allow_wallet_icon"
      />
  <View
      android:id="@+id/dot2"
      android:layout_width="4dp"
      android:layout_height="4dp"
      android:layout_marginStart="4dp"
      android:background="@color/styleguide_dark_grey"
      app:layout_constraintBottom_toBottomOf="@id/provide_wallet_always_allow_wallet_icon"
      app:layout_constraintEnd_toStartOf="@id/dot3"
      app:layout_constraintStart_toEndOf="@id/dot1"
      app:layout_constraintTop_toTopOf="@id/provide_wallet_always_allow_wallet_icon"
      />
  <View
      android:id="@+id/dot3"
      android:layout_width="4dp"
      android:layout_height="4dp"
      android:layout_marginStart="4dp"
      android:background="@color/styleguide_dark_grey"
      app:layout_constraintBottom_toBottomOf="@id/provide_wallet_always_allow_wallet_icon"
      app:layout_constraintEnd_toStartOf="@id/dot4"
      app:layout_constraintStart_toEndOf="@id/dot2"
      app:layout_constraintTop_toTopOf="@id/provide_wallet_always_allow_wallet_icon"
      />
  <View
      android:id="@+id/dot4"
      android:layout_width="4dp"
      android:layout_height="4dp"
      android:layout_marginStart="4dp"
      android:background="@color/styleguide_dark_grey"
      app:layout_constraintBottom_toBottomOf="@id/provide_wallet_always_allow_wallet_icon"
      app:layout_constraintEnd_toStartOf="@id/provide_wallet_always_allow_app_icon"
      app:layout_constraintStart_toEndOf="@id/dot3"
      app:layout_constraintTop_toTopOf="@id/provide_wallet_always_allow_wallet_icon"
      />

  <ImageView
      android:id="@+id/provide_wallet_always_allow_app_icon"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="16dp"
      app:layout_constraintBottom_toBottomOf="@id/provide_wallet_always_allow_wallet_icon"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/dot4"
      app:layout_constraintTop_toTopOf="@id/provide_wallet_always_allow_wallet_icon"
      />
</merge>