<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backup_password_toggle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@drawable/rectangle_outline_grey"
    >

  <TextView
      android:id="@+id/password_toggle_title"
      style="@style/WalletBackupTextStyle.Bold.Inactive"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/big_margin"
      android:layout_marginTop="@dimen/backup_password_padding"
      android:layout_marginEnd="@dimen/big_margin"
      android:text="@string/backup_additional_security_title"
      app:layout_constraintEnd_toStartOf="@id/backup_password_toggle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/choose_password_text"
      style="@style/WalletBackupTextStyle.Normal"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/small_margin"
      android:layout_marginEnd="@dimen/big_margin"
      android:paddingBottom="@dimen/backup_password_padding"
      android:text="@string/backup_additional_security_body"
      app:layout_constraintEnd_toStartOf="@id/backup_password_toggle"
      app:layout_constraintStart_toStartOf="@id/password_toggle_title"
      app:layout_constraintTop_toBottomOf="@id/password_toggle_title"
      />

  <androidx.appcompat.widget.SwitchCompat
      android:id="@+id/backup_password_toggle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="@dimen/big_margin"
      android:thumb="@drawable/round_thumb_white"
      android:track="@drawable/round_track"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/password_group"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/backup_password_padding"
      android:visibility="gone"
      app:layout_constraintTop_toBottomOf="@id/choose_password_text"
      tools:visibility="visible"
      >

    <com.asfoundation.wallet.ui.backup.entry.PasswordInputLayout
        android:id="@+id/backup_password_input"
        style="@style/PasswordTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        app:layout_constraintTop_toTopOf="parent"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/backup_password_edit_text"
          style="@style/PasswordEditText"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="@dimen/normal_margin"
          android:gravity="top"
          />
    </com.asfoundation.wallet.ui.backup.entry.PasswordInputLayout>

    <com.asfoundation.wallet.ui.backup.entry.PasswordInputLayout
        android:id="@+id/backup_repeat_password_input"
        style="@style/PasswordTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:hint="@string/repeat_password"
        app:layout_constraintTop_toBottomOf="@id/backup_password_input"
        >

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/backup_repeat_password_edit_text"
          style="@style/PasswordEditText"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="@dimen/normal_margin"
          android:gravity="top"
          />
    </com.asfoundation.wallet.ui.backup.entry.PasswordInputLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/warning_background_color"
        android:paddingVertical="@dimen/normal_margin"
        app:layout_constraintTop_toBottomOf="@id/backup_repeat_password_input"
        >

      <ImageView
          android:id="@+id/warning_sign"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:src="@drawable/ic_alert"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <TextView
          android:id="@+id/warning_text_1"
          style="@style/WalletBackupWarningStyle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginEnd="@dimen/big_margin"
          android:text="@string/backup_additional_security_disclaimer_title"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/warning_sign"
          app:layout_constraintTop_toTopOf="parent"
          />
      <TextView
          android:id="@+id/warning_text_2"
          style="@style/WalletBackupWarningStyle.Bold"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/big_margin"
          android:text="@string/backup_additional_security_disclaimer_body"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="@id/warning_text_1"
          app:layout_constraintTop_toBottomOf="@id/warning_text_1"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>