<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >
  <Button
      android:id="@+id/copy_button"
      style="@style/ButtonStyle.Light"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/button_height"
      android:drawableStart="@drawable/ic_copy_to_clip_pink"
      android:drawablePadding="8dp"
      android:text="@string/wallet_view_copy_button"
      />
  <Button
      android:id="@+id/share_button"
      style="@style/ButtonStyle.Light"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/button_height"
      android:layout_marginStart="8dp"
      android:drawableStart="@drawable/ic_share_enabled"
      android:drawablePadding="8dp"
      android:text="@string/wallet_view_share_button"
      />
</LinearLayout>