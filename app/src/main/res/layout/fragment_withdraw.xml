<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <TextView
      android:id="@+id/paypal_email_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:text="@string/withdraw_email"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <EditText
      android:id="@+id/paypal_email"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:autofillHints="emailAddress"
      android:hint="@string/withdraw_email_hint"
      android:inputType="textEmailAddress"
      app:layout_constraintEnd_toEndOf="@id/paypal_email_title"
      app:layout_constraintStart_toStartOf="@id/paypal_email_title"
      app:layout_constraintTop_toBottomOf="@id/paypal_email_title"
      />
  <TextView
      android:id="@+id/amount_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:text="@string/withdraw_amount"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/paypal_email"
      />

  <EditText
      android:id="@+id/amount"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:autofillHints="emailAddress"
      android:hint="@string/withdraw_amount_hint"
      android:inputType="numberDecimal"
      app:layout_constraintEnd_toEndOf="@id/amount_title"
      app:layout_constraintStart_toStartOf="@id/amount_title"
      app:layout_constraintTop_toBottomOf="@id/amount_title"
      />

  <Button
      android:id="@+id/withdraw_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/withdraw_withdraw_button_text"
      app:layout_constraintEnd_toEndOf="@id/paypal_email"
      app:layout_constraintStart_toStartOf="@id/paypal_email"
      app:layout_constraintTop_toBottomOf="@+id/amount"
      />

</androidx.constraintlayout.widget.ConstraintLayout>