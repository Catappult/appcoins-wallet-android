<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    >
  <include
      android:id="@+id/backup_creation_info"
      layout="@layout/layout_backup_creation_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      app:layout_constraintTop_toTopOf="parent"
      />
  <include
      layout="@layout/layout_backup_creation_options"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="56dp"
      app:layout_constraintTop_toBottomOf="@+id/backup_creation_info"
      />
  <TextView
      style="@style/WalletBackupTextStyle.Normal.White"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="30dp"
      android:layout_marginStart="@dimen/half_large_margin"
      android:layout_marginEnd="@dimen/half_large_margin"
      android:layout_marginBottom="@dimen/half_large_margin"
      android:gravity="center"
      android:text="@string/backup_body"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>