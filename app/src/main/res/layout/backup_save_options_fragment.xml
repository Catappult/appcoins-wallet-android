<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/styleguide_blue"
    >
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:fillViewport="true"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <include
          android:id="@+id/backup_creation_info"
          layout="@layout/backup_save_options_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="50dp"
          app:layout_constraintTop_toTopOf="parent"
          />
      <include
          android:id="@+id/backup_creation_options"
          layout="@layout/backup_save_options_options"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="56dp"
          app:layout_constraintTop_toBottomOf="@+id/backup_creation_info"
          app:layout_constraintBottom_toTopOf="@+id/backup_creation_disclaimer"
          />
      <TextView
          android:id="@+id/backup_creation_disclaimer"
          style="@style/WalletBackupTextStyle.Normal.White"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/half_large_margin"
          android:layout_marginBottom="@dimen/half_large_margin"
          android:gravity="center"
          android:text="@string/backup_body"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>