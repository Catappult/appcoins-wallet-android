<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="eSkills" />

  <style name="eSkills.Withdraw" />

  <style name="eSkills.Withdraw.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    <item name="android:background">@null</item>
    <item name="android:textColorHint">@color/styleguide_dark_grey</item>
    <item name="android:textColor">@color/styleguide_black_transparent_80</item>
    <item name="android:textCursorDrawable">@null</item>
    <item name="boxStrokeColor">@null</item>
    <item name="boxBackgroundMode">none</item>
    <item name="hintEnabled">false</item>
    <item name="colorControlActivated">#000000</item>
    <item name="colorControlNormal">#000000</item>
    <item name="colorControlHighlight">#000000</item>
    <item name="android:theme">@style/EditTextCursorTheme</item>
  </style>

  <style name="eSkills.Withdraw.TextInputEditText">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:imeOptions">flagNoExtractUi|flagNoFullscreen</item>
    <item name="android:textCursorDrawable">@drawable/text_cursor_black</item>
    <item name="colorControlActivated">#000000</item>
    <item name="colorControlNormal">#000000</item>
    <item name="colorControlHighlight">#000000</item>
    <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
  </style>

  <style name="eSkills.Withdraw.FieldError">
    <item name="android:textColor">@color/styleguide_red</item>
    <item name="android:textSize">12sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textStyle">normal</item>
  </style>
</resources>
