<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    android:paddingHorizontal="@dimen/big_padding"
    android:paddingTop="@dimen/normal_margin"
    >
  <ScrollView
      android:id="@+id/backup_scroll_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/backup_button_layout"
      app:layout_constraintTop_toTopOf="parent"
      >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >
      <include
          android:id="@+id/wallet_backup_info"
          layout="@layout/layout_wallet_backup_info"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/normal_margin"
          app:layout_constraintEnd_toEndOf="@id/backup_half_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/backup_half_guideline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.5"
          />
      <include
          layout="@layout/layout_backup_password_toggle"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/normal_margin"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/backup_half_guideline"
          app:layout_constraintTop_toTopOf="parent"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/backup_button_layout"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="@id/horizontal_guideline"
      >
    <com.asfoundation.wallet.ui.common.WalletButtonView
        android:id="@+id/backup_btn"
        android:layout_width="200dp"
        android:layout_height="@dimen/large_button_height"
        android:layout_marginVertical="20dp"
        app:buttonText="@string/backup_wallet_button"
        app:buttonType="filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.asfoundation.wallet.ui.common.WalletButtonView
        android:visibility="gone"
        android:id="@+id/backup_skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/large_button_height"
        android:layout_marginEnd="@dimen/big_margin"
        android:paddingHorizontal="@dimen/big_padding"
        app:buttonText="@string/skip_button"
        app:buttonType="text"
        app:buttonColor="@color/grey_blue_medium"
        app:layout_constraintBottom_toBottomOf="@+id/backup_btn"
        app:layout_constraintEnd_toStartOf="@+id/backup_btn"
        app:layout_constraintTop_toTopOf="@+id/backup_btn"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/horizontal_guideline"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.76"
      />
</androidx.constraintlayout.widget.ConstraintLayout>
