<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/styleguide_blue"
    android:theme="@style/AdyenMaterialAppTheme"
    >

  <ScrollView
      android:id="@+id/top_up_container"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:descendantFocusability="beforeDescendants"
      android:fillViewport="true"
      app:layout_constraintBottom_toTopOf="@id/bottom_separator"
      app:layout_constraintTop_toTopOf="parent"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/mid_guideline"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.5"
          />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/layout_header_top_up"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:layout_marginTop="16dp"
          android:background="@drawable/rectangle_blue_secondary_radius_16dp"
          android:visibility="visible"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:visibility="visible"
          >
        <TextView
            android:id="@+id/main_currency_code"
            style="@style/TopUpTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:minWidth="48dp"
            android:text="--"
            android:textColor="@color/styleguide_light_grey"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeStepGranularity="2sp"
            app:layout_constraintBottom_toBottomOf="@id/main_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_value"
            tools:text="EUR"
            />

        <include
            android:id="@+id/main_currency_skeleton"
            layout="@layout/skeleton_rounded_rectangle_dark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/main_currency_code"
            app:layout_constraintEnd_toEndOf="@id/main_currency_code"
            app:layout_constraintStart_toStartOf="@id/main_currency_code"
            app:layout_constraintTop_toTopOf="@id/main_currency_code"
            />

        <com.asfoundation.wallet.ui.widget.AutoFitEditText
            android:id="@+id/main_value"
            style="@style/TopUpTextStyle.MainHeaderValue"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@null"
            android:enabled="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionNext"
            android:inputType="numberDecimal"
            android:maxWidth="152dp"
            android:maxLength="152"
            android:maxLines="1"
            android:minWidth="52dp"
            android:textColor="@color/styleguide_light_grey"
            android:textColorHint="@color/styleguide_dark_grey"
            app:autoSizeStepGranularity="2sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_currency_code"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="123"
            />

        <ImageView
            android:id="@+id/ic_info_fees"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_info_message"
            android:tooltipText="@string/purchase_fee_supported_currency_unknown_disclaimer"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/info_fees"
            app:layout_constraintEnd_toStartOf="@id/info_fees"
            app:layout_constraintTop_toTopOf="@id/info_fees"
            tools:ignore="UnusedAttribute"
            />

        <TextView
            android:id="@+id/info_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="80dp"
            android:text="@string/purchase_extra_charges_included_disclaimer_body"
            android:textColor="@color/styleguide_dark_grey"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/main_value"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintTop_toBottomOf="@id/main_value"
            />

        <include
            android:id="@+id/main_value_skeleton"
            layout="@layout/skeleton_rounded_rectangle_dark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/main_value"
            app:layout_constraintEnd_toEndOf="@id/main_value"
            app:layout_constraintStart_toStartOf="@id/main_value"
            app:layout_constraintTop_toTopOf="@id/main_value"
            />

        <View
            android:id="@+id/header_top_up_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:alpha="0.3"
            android:background="@color/styleguide_dark_grey"
            app:layout_constraintTop_toBottomOf="@id/info_fees"
            />

        <TextView
            android:id="@+id/converted_value"
            style="@style/TopUpTextStyle.ConvertedValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="--"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_value"
            />

        <ImageView
            android:id="@+id/value_warning_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_topup_error"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/main_value"
            app:layout_constraintEnd_toStartOf="@id/main_value"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/main_value"
            android:importantForAccessibility="no"
            />

        <include
            android:id="@+id/bonus_layout"
            layout="@layout/view_purchase_bonus_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/big_margin"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_top_up_divider"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintVertical_chainStyle="packed"
            />

        <include
            android:id="@+id/bonus_layout_skeleton"
            layout="@layout/skeleton_rounded_rectangle_dark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/bonus_layout"
            app:layout_constraintEnd_toEndOf="@id/bonus_layout"
            app:layout_constraintStart_toStartOf="@id/bonus_layout"
            app:layout_constraintTop_toTopOf="@id/bonus_layout"
            />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <TextView
          android:id="@+id/value_warning_text"
          style="@style/TopUpTextStyle.ValueWarning"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="13dp"
          android:text="@string/topup_minimum_value"
          android:visibility="invisible"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/layout_header_top_up"
          />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/payment_container"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginTop="4dp"
          android:paddingHorizontal="16dp"
          app:layout_constraintBottom_toTopOf="@id/button"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/mid_guideline"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0"
          >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/payment_methods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:focusable="true"
            android:overScrollMode="never"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/payments_skeleton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
          <include
              layout="@layout/skeleton_payments_dark"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              />
          <include
              layout="@layout/skeleton_payments_dark"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:layout_marginTop="8dp"
              />
          <include
              layout="@layout/skeleton_payments_dark"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:layout_marginTop="8dp"
              />
        </LinearLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>


      <com.appcoins.wallet.ui.widgets.WalletButtonView
          android:id="@+id/button"
          android:layout_width="0dp"
          android:layout_height="@dimen/small_button_height"
          android:layout_alignParentBottom="true"
          android:layout_gravity="center_vertical"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="21dp"
          android:enabled="false"
          app:buttonText="@string/action_next"
          app:buttonType="filled"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/mid_guideline"
          app:layout_constraintTop_toBottomOf="@id/payment_container"
          app:layout_constraintVertical_bias="1"
          />

      <include
          android:id="@+id/fragment_adyen_error"
          layout="@layout/error_top_up_layout"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginStart="32dp"
          android:layout_marginEnd="32dp"
          android:layout_marginBottom="76dp"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>

  <include
      android:id="@+id/no_network"
      layout="@layout/no_network_retry_only_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <androidx.compose.ui.platform.ComposeView
      android:id="@+id/composeView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

  <include
      android:id="@+id/error_topup"
      layout="@layout/topup_error_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <View
      android:id="@+id/bottom_separator"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/styleguide_blue_secondary"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@id/rv_default_values"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:visibility="visible"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_default_values"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/styleguide_topup_dark_grey"
      android:orientation="horizontal"
      android:overScrollMode="never"
      android:visibility="gone"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:listitem="@layout/item_top_value"
      tools:visibility="visible"
      />

</androidx.constraintlayout.widget.ConstraintLayout>