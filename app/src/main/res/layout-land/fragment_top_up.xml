<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card"
    android:theme="@style/AdyenMaterialAppTheme"
    >

  <ScrollView
      android:id="@+id/top_up_container"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:descendantFocusability="beforeDescendants"
      android:fillViewport="true"
      app:layout_constraintBottom_toTopOf="@id/bottom_separator"
      app:layout_constraintTop_toTopOf="parent"
      >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/mid_guideline"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.5"
          />

      <TextView
          android:id="@+id/main_currency_code"
          style="@style/TopUpTextStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="26dp"
          android:text="--"
          app:autoSizeStepGranularity="2sp"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

      <com.asfoundation.wallet.ui.widget.AutoFitEditText
          android:id="@+id/main_value"
          style="@style/TopUpTextStyle.MainValue"
          android:layout_width="152dp"
          android:layout_height="55dp"
          android:layout_marginTop="5dp"
          android:background="@null"
          android:enabled="false"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:gravity="center"
          android:hint="0"
          android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionNext"
          android:inputType="numberDecimal"
          android:maxWidth="152dp"
          android:maxLength="152"
          android:maxLines="1"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/main_currency_code"
          />

      <TextView
          android:id="@+id/converted_value"
          style="@style/TopUpTextStyle.ConvertedValue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="--"
          app:layout_constraintEnd_toEndOf="@id/main_value"
          app:layout_constraintStart_toStartOf="@id/main_value"
          app:layout_constraintTop_toBottomOf="@id/main_value"
          />

      <ImageButton
          android:id="@+id/swap_value_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="40dp"
          android:layout_marginEnd="40dp"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:enabled="false"
          android:src="@drawable/ic_swap"
          android:visibility="invisible"
          app:layout_constraintBottom_toBottomOf="@id/main_value"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintHorizontal_bias="1"
          app:layout_constraintStart_toStartOf="@id/main_value"
          app:layout_constraintTop_toTopOf="@id/main_value"
          />

      <TextView
          android:id="@+id/swap_value_label"
          style="@style/TopUpTextStyle.SwapCurrency"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="--"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="@id/swap_value_button"
          app:layout_constraintStart_toStartOf="@id/swap_value_button"
          app:layout_constraintTop_toBottomOf="@id/swap_value_button"
          />

      <ImageView
          android:id="@+id/value_warning_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="40dp"
          android:layout_marginEnd="40dp"
          android:src="@drawable/ic_topup_error"
          android:visibility="invisible"
          app:layout_constraintBottom_toBottomOf="@id/main_value"
          app:layout_constraintEnd_toStartOf="@id/main_value"
          app:layout_constraintHorizontal_bias="1"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="@id/main_value"
          />

      <TextView
          android:id="@+id/value_warning_text"
          style="@style/TopUpTextStyle.ValueWarning"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="13dp"
          android:text="@string/topup_minimum_value"
          android:visibility="invisible"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/converted_value"
          />

      <include
          android:id="@+id/bonus_layout"
          layout="@layout/view_purchase_bonus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:visibility="invisible"
          app:layout_constraintBottom_toTopOf="@+id/bonus_msg"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/value_warning_text"
          app:layout_constraintVertical_bias="0"
          app:layout_constraintVertical_chainStyle="packed"
          />

      <TextView
          android:id="@+id/bonus_msg"
          style="@style/TopUpTextStyle.Small.BonusText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="11dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:layout_marginBottom="21dp"
          android:gravity="center"
          android:text="@string/gamification_purchase_body"
          android:visibility="invisible"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/bonus_layout"
          />

      <include
          android:id="@+id/bonus_layout_skeleton"
          layout="@layout/skeleton_rounded_rectangle"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintBottom_toBottomOf="@id/bonus_layout"
          app:layout_constraintEnd_toEndOf="@id/bonus_layout"
          app:layout_constraintStart_toStartOf="@id/bonus_layout"
          app:layout_constraintTop_toTopOf="@id/bonus_layout"
          />
      <include
          android:id="@+id/bonus_msg_skeleton"
          layout="@layout/skeleton_rounded_rectangle"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginStart="56dp"
          android:layout_marginEnd="56dp"
          app:layout_constraintBottom_toBottomOf="@id/bonus_msg"
          app:layout_constraintEnd_toEndOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="@id/bonus_msg"
          app:layout_constraintTop_toTopOf="@id/bonus_msg"
          />

      <View
          android:id="@+id/top_separator_topup"
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_marginStart="32dp"
          android:layout_marginEnd="32dp"
          android:background="#eaeaea"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/mid_guideline"
          app:layout_constraintTop_toTopOf="@id/main_currency_code"
          />

      <RelativeLayout
          android:id="@id/container"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/mid_guideline"
          app:layout_constraintTop_toBottomOf="@id/top_separator_topup"
          >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/payment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            >

          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/payment_methods"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clipToPadding="false"
              android:focusable="true"
              android:overScrollMode="never"
              android:paddingTop="4dp"
              android:paddingBottom="4dp"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              />

          <LinearLayout
              android:id="@+id/payments_skeleton"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_marginTop="16dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="16dp"
              android:orientation="vertical"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              >
            <include
                layout="@layout/skeleton_payments"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                />
            <include
                layout="@layout/skeleton_payments"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                />
          </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

      </RelativeLayout>

      <View
          android:id="@+id/bot_separator"
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_marginStart="32dp"
          android:layout_marginEnd="32dp"
          android:background="#eaeaea"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/mid_guideline"
          app:layout_constraintTop_toBottomOf="@id/container"
          />

      <Button
          android:id="@+id/button"
          style="@style/ButtonStyle.Alternative"
          android:layout_width="0dp"
          android:layout_height="@dimen/button_height"
          android:layout_marginStart="40dp"
          android:layout_marginTop="32dp"
          android:layout_marginEnd="16dp"
          android:layout_marginBottom="21dp"
          android:enabled="false"
          android:minWidth="144dp"
          android:text="@string/action_next"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/container"
          app:layout_constraintVertical_bias="0"
          />

      <include
          android:id="@+id/fragment_adyen_error"
          layout="@layout/error_top_up_layout"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginStart="32dp"
          android:layout_marginEnd="32dp"
          android:layout_marginBottom="76dp"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </ScrollView>


  <include
      android:id="@+id/no_network"
      layout="@layout/no_network_retry_only_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <View
      android:id="@+id/bottom_separator"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginBottom="8dp"
      android:background="@color/layout_separator_color"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@id/rv_default_values"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_default_values"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:orientation="horizontal"
      android:overScrollMode="never"
      android:visibility="gone"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:listitem="@layout/item_top_value"
      />

</androidx.constraintlayout.widget.ConstraintLayout>