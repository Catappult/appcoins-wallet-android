<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/payment_methods_width_landscape"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    >

  <RelativeLayout
      android:id="@+id/payment_method_main_view"
      android:layout_width="@dimen/payment_methods_width_landscape"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:animateLayoutChanges="true"
      >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_animation"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_wallet"
        android:visibility="invisible"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_methods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        >

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/mid_guideline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.46"
          />

      <include
          android:id="@+id/payment_methods_header"
          layout="@layout/payment_methods_header"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="19dp"
          android:layout_marginEnd="@dimen/big_margin"
          app:layout_constraintEnd_toEndOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          />
      <include
          android:id="@+id/bonus_layout"
          layout="@layout/view_purchase_bonus"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:layout_marginTop="15dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/payment_methods_header"
          app:layout_constraintVertical_bias="1"
          app:layout_constraintVertical_chainStyle="packed"
          tools:visibility="visible"
          />

      <TextView
          android:id="@+id/bonus_msg"
          style="@style/TopUpTextStyle.Small.BonusText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="2dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:gravity="start"
          android:text="@string/gamification_purchase_body"
          android:visibility="invisible"
          app:layout_constraintEnd_toEndOf="@id/mid_guideline"
          app:layout_constraintStart_toStartOf="@id/bonus_layout"
          app:layout_constraintTop_toBottomOf="@+id/bonus_layout"
          app:layout_constraintVertical_bias="1"
          tools:visibility="visible"
          />

      <ImageView
          android:id="@+id/mid_separator"
          android:layout_width="1dp"
          android:layout_height="0dp"
          android:layout_marginTop="7dp"
          android:layout_marginBottom="8dp"
          android:background="@drawable/dashed_vertical_line"
          app:layout_constraintBottom_toTopOf="@id/bottom_separator"
          app:layout_constraintStart_toEndOf="@id/mid_guideline"
          app:layout_constraintTop_toTopOf="parent"
          />
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/radio_group"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@id/mid_guideline"
          app:layout_constraintTop_toTopOf="parent"
          >
        <include
            android:id="@+id/credits_radio"
            layout="@layout/credits_radio_button"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <include
            android:id="@+id/skeleton_appcoins"
            layout="@layout/skeleton_credits"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/radio_middle_separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <View
            android:id="@+id/radio_middle_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:background="@color/styleguide_light_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/credits_radio"
            />
        <include
            android:id="@+id/appcoins_radio"
            layout="@layout/appcoins_radio_button"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/radio_middle_separator"
            />
        <include
            android:id="@+id/skeleton_credits"
            layout="@layout/skeleton_credits"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radio_middle_separator"
            />
        <androidx.constraintlayout.widget.Group
            android:id="@+id/payment_methods_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:constraint_referenced_ids="appcoins_radio,credits_radio"
            tools:visibility="visible"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <ImageView
          android:id="@id/info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/big_margin"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/bonus_layout"
          app:layout_constraintVertical_bias="0"
          app:srcCompat="@drawable/ic_info_grey"
          />

      <TextView
          android:id="@+id/info_text"
          style="@style/TextAppearance.AppCompat.Body1.Roboto.Regular"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="@dimen/big_margin"
          android:text="APPC value can be volatile, the value shown may not match â€¨the next  payment"
          android:textSize="10sp"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="@id/info"
          app:layout_constraintEnd_toStartOf="@id/mid_guideline"
          app:layout_constraintStart_toEndOf="@id/info"
          app:layout_constraintTop_toTopOf="@id/info"
          />

      <View
          android:id="@+id/bottom_separator"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/styleguide_light_grey"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/radio_group"
          />

      <androidx.constraintlayout.widget.Guideline
          android:id="@+id/bottom_mid_guideline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintGuide_percent="0.55"
          />

      <include
          android:id="@+id/dialog_buy_buttons_payment_methods"
          layout="@layout/dialog_buy_buttons_payment_methods"
          android:layout_width="match_parent"
          android:layout_height="48dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@id/bottom_separator"

          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </RelativeLayout>

  <include
      android:id="@+id/merged_error_layout"
      layout="@layout/iab_error_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:visibility="gone"
      />

</RelativeLayout>