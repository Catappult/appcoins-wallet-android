<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backup_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    >
  <ImageView
      android:id="@+id/ic_wallet"
      android:layout_width="70dp"
      android:layout_height="94dp"
      android:layout_marginTop="20dp"
      android:src="@drawable/ic_lock_appc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/trigger_dialog_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/big_margin"
      android:layout_marginTop="@dimen/big_margin"
      android:gravity="center"
      android:fontFamily="@font/roboto_bolt"
      android:textSize="@dimen/backup_big_text_size"
      android:text="@string/backup_popup_title"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ic_wallet"
      />
  <TextView
      android:id="@+id/trigger_dialog_message"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/big_margin"
      android:layout_marginTop="12dp"
      android:gravity="center"
      android:fontFamily="@font/roboto_medium"
      android:textSize="@dimen/backup_m_text_size"
      android:text="@string/backup_popup_purchase_body"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/trigger_dialog_title"
      />

  <com.appcoins.wallet.ui.widgets.WalletButtonView
      android:id="@+id/trigger_backup_btn"
      android:layout_width="match_parent"
      android:layout_height="@dimen/large_button_height"
      android:layout_marginTop="@dimen/half_large_margin"
      android:layout_marginHorizontal="@dimen/big_margin"
      app:buttonText="@string/backup_wallet_button"
      app:buttonType="filled"
      app:layout_constraintBottom_toTopOf="@id/trigger_dismiss_btn"
      app:layout_constraintTop_toBottomOf="@+id/trigger_dialog_message"
      />

  <com.appcoins.wallet.ui.widgets.WalletButtonView
      android:id="@+id/trigger_dismiss_btn"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/large_button_height"
      android:layout_marginTop="@dimen/normal_margin"
      android:layout_marginBottom="@dimen/big_margin"
      android:layout_marginHorizontal="@dimen/big_margin"
      app:buttonText="@string/skip_button"
      app:buttonType="text"
      app:buttonColor="@color/styleguide_dark_grey"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/trigger_backup_btn"
      />
</androidx.constraintlayout.widget.ConstraintLayout>