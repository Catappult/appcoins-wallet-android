<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="304dp"
    android:background="@drawable/background_current_top3"

    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/next_reward_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingHorizontal="16dp"
      android:paddingTop="16dp"
      android:paddingBottom="16dp"
      app:layout_constraintTop_toTopOf="parent"
      >
    <TextView
        android:id="@+id/next_reward_title"
        style="@style/NextReward.Title"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:text="@string/next_reward_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <include
        android:id="@+id/countdown_timer_container"
        layout="@layout/countdown_timer_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/next_reward_title"
        app:layout_constraintTop_toTopOf="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.1dp"
      android:background="@color/white"
      app:layout_constraintTop_toBottomOf="@id/next_reward_container"
      />

  <TextView
      android:id="@+id/current_top3_title"
      style="@style/NextReward.Title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingHorizontal="@dimen/big_padding"
      android:paddingVertical="8dp"
      android:text="@string/current_top_3"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/next_reward_container"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/current_top3_title"
      >
    <include
        android:id="@+id/first_player_row"
        layout="@layout/first_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        />
    <include
        android:id="@+id/second_player_row"
        layout="@layout/second_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:layout_marginVertical="4dp"
        android:layout_weight="1"
        />
    <include
        android:id="@+id/third_player_row"
        layout="@layout/third_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_weight="1"
        />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>