<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/background_card"
      android:elevation="@dimen/default_elevation"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >
    <include
        android:id="@+id/appcoins_header"
        layout="@layout/appcoins_header"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/card"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card_bottom_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appcoins_header"
        >

      <com.airbnb.lottie.LottieAnimationView
          android:id="@+id/lottie_animation"
          android:layout_width="0dp"
          android:layout_height="152dp"
          android:layout_margin="@dimen/big_margin"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:lottie_autoPlay="true"
          app:lottie_enableMergePathsForKitKatAndAbove="true"
          app:lottie_loop="true"
          app:lottie_rawRes="@raw/transact_loading_animation"
          />

      <TextView
          android:id="@+id/animation_description_text"
          style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/big_margin"
          android:maxLines="1"
          android:text="@string/waiting_for_opponents_to_finish"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/lottie_animation"
          />

      <TextView
          android:id="@+id/secondary_message"
          style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:maxLines="1"
          android:visibility="gone"
          tools:text=""
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/animation_description_text"
          />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/ranking_recycler_view"
          android:layout_width="280dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/big_margin"
          android:background="@drawable/background_card"
          android:backgroundTint="@color/background_brown"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/secondary_message"
          />

      <Button
          android:id="@+id/restart_button"
          style="@style/ButtonStyle"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="@dimen/big_margin"
          android:layout_marginEnd="32dp"
          android:text="@string/restart_button"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/ranking_recycler_view"
          />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/leaderboard_constraint"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginStart="32dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="32dp"
          android:layout_marginBottom="16dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/restart_button">

        <!-- Your button -->
        <Button
            android:id="@+id/rankings_button"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leaderboard_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0" />
        <ImageView
            android:id="@+id/sticker_image"
            android:layout_width="54dp"
            android:layout_height="50dp"
            android:elevation="100dp"
            android:src="@drawable/new_sticker"
            app:layout_constraintBottom_toBottomOf="@id/rankings_button"
            app:layout_constraintEnd_toEndOf="@id/rankings_button"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <Button
          android:id="@+id/retry_button"
          style="@style/ButtonStyle"
          android:layout_width="match_parent"
          android:layout_height="36dp"
          android:layout_marginStart="32dp"
          android:layout_marginTop="@dimen/big_margin"
          android:layout_marginEnd="32dp"
          android:layout_marginBottom="@dimen/big_margin"
          android:text="@string/retry_button"
          android:visibility="gone"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/ranking_recycler_view"
          />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>