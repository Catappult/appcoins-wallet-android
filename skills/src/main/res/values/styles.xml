<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextAppearance.AppCompat.Body1.Roboto.Medium" parent="TextAppearance.AppCompat.Body1">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#828282</item>
  </style>

  <style name="Theme.AppCompat.Transparent" parent="Theme.AppCompat">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:fitsSystemWindows">true</item>
  </style>

  <style name="Theme.AppCompat.Transparent.FitAppWindow.Eskills" parent="Theme.AppCompat.Transparent">
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:windowIsFloating">false</item>
  </style>

  <style name="ButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
    <item name="android:background">@drawable/button_background</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@drawable/btn_text_color</item>
    <item name="android:textSize">14sp</item>
    <item name="android:minWidth">64dp</item>
    <item name="android:minHeight">36dp</item>
  </style>

  <style name="eSkills" />

  <style name="eSkills.Error" />

  <style name="eSkills.Error.Title">
    <item name="android:textColor">@color/btn_light_enabled_color</item>
    <item name="android:textSize">20sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:lineSpacingExtra">4sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:letterSpacing">0.03</item>
  </style>

  <style name="PaymentMethods.Error.Message" parent="TextAppearance.AppCompat.Body1.Roboto.Medium">
    <item name="android:textColor">@color/pending_payment_text_color</item>
    <item name="android:textSize">16sp</item>
  </style>

</resources>
