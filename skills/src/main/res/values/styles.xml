<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextAppearance.AppCompat.Body1.Roboto.Medium" parent="TextAppearance.AppCompat.Body1">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#828282</item>
  </style>
  <style name="TextAppearance.AppCompat.Body1.Roboto.Bold" parent="TextAppearance.AppCompat.Body1">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#828282</item>
    <item name="android:fontFamily">@font/roboto_bolt</item>
  </style>

  <style name="Theme.AppCompat.Transparent" parent="Theme.AppCompat">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:fitsSystemWindows">true</item>
  </style>

  <style name="Theme.AppCompat.Transparent.FitAppWindow.Eskills" parent="Theme.AppCompat.Transparent">
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:windowIsFloating">false</item>
  </style>

  <style name="ButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
    <item name="android:background">@drawable/button_background</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@drawable/btn_text_color</item>
    <item name="android:textSize">14sp</item>
    <item name="android:minWidth">64dp</item>
    <item name="android:minHeight">36dp</item>
  </style>

  <style name="ButtonStyle.Alternative" parent="ButtonStyle">
    <item name="android:background">@drawable/button_snd_background</item>
    <item name="android:textColor">@color/btn_text_enable_color</item>
  </style>

  <style name="eSkills" />

  <style name="eSkills.Error" />

  <style name="eSkills.Error.Title">
    <item name="android:textColor">@color/btn_light_enabled_color</item>
    <item name="android:textSize">20sp</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:lineSpacingExtra">4sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:letterSpacing">0.03</item>
  </style>

  <style name="PaymentMethods.Error.Message" parent="TextAppearance.AppCompat.Body1.Roboto.Medium">
    <item name="android:textColor">@color/pending_payment_text_color</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="eSkills.Payment" />

  <style name="eSkills.Payment.TextInputEditText">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLines">1</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">0dp</item>
    <item name="android:imeOptions">flagNoExtractUi|flagNoFullscreen</item>
    <item name="android:textCursorDrawable">@drawable/text_cursor_black</item>
    <item name="colorControlActivated">#000000</item>
    <item name="colorControlNormal">#000000</item>
    <item name="colorControlHighlight">#000000</item>
    <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
  </style>

  <style name="eSkills.ReferralShare"/>
  <style name="eSkills.ReferralShare.CodeText">
    <item name="android:fontFamily">@font/roboto_bolt</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="eSkills.ReferralShare.PopupText">
    <item name="android:fontFamily">@font/roboto_regular</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/white</item>
  </style>


  <style name="DialogTextStyle">
    <item name="android:textColor">@color/gray_alpha_8a</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="BlackTextStyle">
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="DialogTitleStyle">
    <item name="android:textColor">@color/black_87_alpha</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="CancelBorderlessButtonStyle" parent="CancelButtonStyle">
    <item name="android:textStyle">normal</item>
  </style>

  <style name="CancelButtonStyle" parent="Base.Widget.AppCompat.ImageButton">
    <item name="android:background">@drawable/borderless_button_background</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@color/btn_cancel_text</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingStart">@dimen/big_padding</item>
    <item name="android:paddingEnd">@dimen/big_padding</item>
    <item name="android:minWidth">64dp</item>
    <item name="android:letterSpacing">.09</item>
  </style>
</resources>
