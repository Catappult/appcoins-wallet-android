<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <RelativeLayout
      android:id="@+id/create_wallet_card"
      android:layout_width="296dp"
      android:layout_height="254dp"
      android:layout_centerHorizontal="true"
      android:layout_gravity="center"
      android:background="@drawable/background_card_bottom_rounded"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/create_wallet_animation"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/create_wallet_loading_animation"
        />

    <TextView
        android:id="@+id/create_wallet_text"
        style="@style/TextAppearance.AppCompat.Body1.Roboto.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_wallet_animation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:text="@string/provide_wallet_creating_wallet_header"
        />

  </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>